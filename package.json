{
  "name": "pim-community-dev",
  "version": "3.2.0",
  "description": "Akeneo PIM Application",
  "homepage": "https://www.akeneo.com/",
  "packageManager": "yarn@3.1.1",
  "config": {
    "source": ".",
    "styles": "frontend/build/compile-less.js"
  },
  "scripts": {
    "requirements": "node ./frontend/build/check-requirements.js",
    "webpack": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --config ./webpack.config.js --env=prod",
    "webpack-dev": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --config ./webpack.config.js",
    "webpack-watch": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --progress --config ./webpack.config.js --watch",
    "prettier:run": "prettier --config .prettierrc.json --parser typescript --write \"./src/**/*.{js,ts,tsx}\" && yarn packages:lint-fix",
    "prettier:check": "prettier --config .prettierrc.json --parser typescript --check \"./src/**/*.{js,ts,tsx}\" && yarn packages:lint:check",
    "before-commit": "yarn prettier && yarn lint && yarn test",
    "test": "yarn unit && yarn webpack-test --env=prod && yarn integration && yarn acceptance tests/features",
    "webpack-test": "yarn generate-models && webpack --config webpack-test.config.js",
    "thispackage:lint": "eslint src/**/*.js --config .eslintrc --ignore-path .eslintignore --quiet && yarn prettier:check",
    "thispackage:lint-fix": "eslint src/**/*.js --config .eslintrc --ignore-path .eslintignore --quiet --fix && yarn prettier:run",
    "unit": "yarn packages:unit && jest --no-cache --config tests/front/unit/jest/unit.jest.js --runInBand",
    "integration": "jest --no-cache --config ./tests/front/integration/jest/integration.jest.js",
    "acceptance": "cucumber-js --tags @acceptance-front -r ./frontend/test/acceptance/run-steps.js -r ./tests/front/acceptance/cucumber",
    "acceptance-html-report": "yarn acceptance ./tests/features/ -f json:public/test_dist/acceptance-js.json && node frontend/test/acceptance/generate-html-report.js",
    "less": "node frontend/build/compile-less.js",
    "update-extensions": "node ./frontend/build/update-extensions.js",
    "generate-models": "yarn workspace @akeneo-pim-community/communication-channel generate-models",
    "shared:lint:check": "yarn workspace @akeneo-pim-community/shared lint:check",
    "shared:lint-fix": "yarn workspace @akeneo-pim-community/shared lint:fix",
    "shared:build": "yarn workspace @akeneo-pim-community/shared lib:build",
    "measurement:lint:check": "yarn workspace @akeneo-pim-community/measurement lint:check",
    "measurement:build": "yarn workspace @akeneo-pim-community/measurement lib:build",
    "process-tracker:lint:check": "yarn workspace @akeneo-pim-community/process-tracker lint:check",
    "process-tracker:build": "yarn workspace @akeneo-pim-community/process-tracker lib:build",
    "catalog-volume-monitoring:lint:check": "yarn workspace @akeneo-pim-community/catalog-volume-monitoring lint:check",
    "catalog-volume-monitoring:build": "yarn workspace @akeneo-pim-community/catalog-volume-monitoring lib:build",
    "packages:unit": "yarn workspace @akeneo-pim-community/shared test:unit:run && yarn workspace @akeneo-pim-community/measurement test:unit:run && yarn workspace @akeneo-pim-community/process-tracker test:unit:run && yarn workspace @akeneo-pim-community/catalog-volume-monitoring test:unit:run",
    "packages:lint:check": "yarn shared:lint:check && yarn measurement:lint:check && yarn process-tracker:lint:check && yarn catalog-volume-monitoring:lint:check",
    "packages:lint-fix": "yarn shared:lint-fix && echo 'TODO Missing lint fix of other packages'",
    "packages:build": "yarn dsm:build && yarn shared:build && yarn measurement:build && yarn catalog-volume-monitoring:build && yarn process-tracker:build",
    "test:e2e:open": "cypress open",
    "test:e2e:run": "cypress run",
    "lint": "yarn workspaces foreach -vp run lint",
    "lint:fix": "yarn workspaces foreach -v run lint:fix",
    "test:unit:run": "yarn workspaces foreach -v run test:unit:run",
    "lib:build": "yarn workspaces foreach -v run lib:build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akeneo/pim-community-dev.git"
  },
  "license": "OSL-3.0",
  "bugs": {
    "url": "https://github.com/akeneo/pim-community-dev/issues"
  },
  "private": true,
  "workspaces": [
    "front-packages/akeneo-design-system",
    "front-packages/measurement",
    "front-packages/shared",
    "src/Akeneo/Connectivity/Connection/front",
    "src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/activity"
  ],
  "dependencies": {
    "@types/react-router": "<6.0.0",
    "@types/react-router-dom": "<6.0.0",
    "akeneo-design-system": "workspace:*",
    "react-router": "<6.0.0",
    "react-router-dom": "<6.0.0"
  }
}
