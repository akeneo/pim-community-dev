{% extends 'PimConfigBundle::layout.html.twig' %}

{% block page_container %}
<div class="container-fluid">

    {% block content %}

    {{ JSFV(form) }}
    <form class="form-horizontal" action="{{ form.vars.value.id ?
        path('pim_config_locale_edit', { id: form.vars.value.id }) :
        path('pim_config_locale_create') }}" method="POST">

        {% set title = 'Locale'|trans %}

        {% set subtitle = form.vars.value.id ? form.vars.value.code : 'New locale'|trans %}

        {% set buttons %}
            {{ elements.backLink(path('pim_config_locale_index')) }}
            {% if form.vars.value.id %}
                {% if form.activated.vars.value %}
                    {{ elements.link('Disable', path('pim_config_locale_disable', { id: form.vars.value.id }),
                        { attr: { 'data-dialog': 'confirm', 'data-title': 'Disable confirmation'|trans, 'data-message': 'Are you sure you want to disable this locale?'|trans }}) }}
                {% else %}
                    {{ elements.link('Enable', path('pim_config_locale_enable', { id: form.vars.value.id }),
                        { attr: { 'data-dialog': 'confirm', 'data-title': 'Enable confirmation'|trans, 'data-message': 'Are you sure you want to enable this locale?'|trans }}) }}
                {% endif %}
            {% endif %}
            {{ elements.submitBtn }}
        {% endset %}

        {{ elements.page_header(title, buttons, subtitle) }}

        <div class="row-fluid">
            {{ elements.form_errors(form) }}

            {{ form_row(form.id) }}

            {{ form_row(form.code) }}

            {{ form_row(form.fallback) }}

            {{ form_row(form.defaultCurrency) }}

            {{ form_row(form.activated) }}

            {{ form_row(form._token) }}
        </div>
    </form>
    {% endblock %}
</div>
{% endblock %}

{% block head_script_component %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/oroui/lib/backbone.bootstrap-modal.js') }}"></script>
    {% include 'PimUIBundle:Default:_back-url.html.twig' %}
{% endblock %}
