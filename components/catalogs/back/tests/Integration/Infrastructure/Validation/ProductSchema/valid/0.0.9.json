{
    "$id": "https://example.com/product",
    "$schema": "https://api.akeneo.com/mapping/product/0.0.8/schema",
    "$comment": "My first schema !",
    "title": "Product Mapping",
    "description": "JSON Schema describing the structure of products expected by our application",
    "type": "object",
    "properties": {
        "uuid": {
            "title": "Product uuid",
            "type": "string"
        },
        "name": {
            "type": "string",
            "pattern": ".*"
        },
        "body_html": {
            "title": "Description",
            "description": "Product description in raw HTML",
            "type": "string"
        },
        "is_published": {
            "type": "boolean"
        },
        "height": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "release_date": {
            "type": "string",
            "format": "date-time"
        },
        "thumbnail": {
            "type": "string",
            "format": "uri"
        }
    }
}
