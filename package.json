{
  "name": "pim-community-dev",
  "version": "3.2.0",
  "description": "Akeneo PIM Application",
  "homepage": "https://www.akeneo.com/",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "requirements": "node ./frontend/build/check-requirements.js",
    "webpack": "yarn requirements && yarn packagesv2:generate-models && NODE_PATH=node_modules webpack --config ./webpack.config.js --env=prod",
    "webpack-dev": "yarn requirements && yarn packagesv2:generate-models && NODE_PATH=node_modules webpack --config ./webpack.config.js",
    "webpack-watch": "yarn requirements && yarn packagesv2:generate-models && NODE_PATH=node_modules webpack --progress --config ./webpack.config.js --watch",
    "before-commit": "yarn prettier && yarn lint && yarn test",
    "less": "node frontend/build/compile-less.js",
    "update-extensions": "node ./frontend/build/update-extensions.js",
    "test:e2e:open": "cypress open",
    "test:e2e:run": "cypress run",
    "test:webpack": "yarn packagesv2:generate-models && webpack --config webpack-test.config.js",
    "test:integration": "jest --env=jsdom --no-cache --config ./tests/front/integration/jest/integration.jest.js",
    "test:acceptance": "cucumber-js --tags @acceptance-front -r ./frontend/test/acceptance/run-steps.js -r ./tests/front/acceptance/cucumber",
    "test:acceptance-html-report": "yarn test:acceptance ./tests/features/ -f json:public/test_dist/acceptance-js.json && node frontend/test/acceptance/generate-html-report.js",
    "lint": "eslint src/**/*.js --config .eslintrc --ignore-path .eslintignore --quiet && prettier --config .prettierrc.json --parser typescript --check \"./src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint src/**/*.js --config .eslintrc --ignore-path .eslintignore --quiet --fix && prettier --config .prettierrc.json --parser typescript --write \"./src/**/*.{js,ts,tsx}\"",
    "test:unit:run": "jest --env=jsdom --no-cache --config tests/front/unit/jest/unit.jest.js --runInBand",
    "packagesv2:generate-models": "yarn workspaces foreach run generate-models",
    "packagesv2:lint": "yarn workspaces foreach -v run lint",
    "packagesv2:lint:fix": "yarn workspaces foreach -v run lint:fix",
    "packagesv2:lib:build": "yarn workspaces foreach -v run lib:build",
    "packagesv2:test:unit:run": "yarn workspaces foreach -v run test:unit:run",
    "packagesv2:runall": "yarn lint && yarn lib:build && yarn test:unit:run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akeneo/pim-community-dev.git"
  },
  "license": "OSL-3.0",
  "bugs": {
    "url": "https://github.com/akeneo/pim-community-dev/issues"
  },
  "private": true,
  "workspaces": [
    "front-packages/measurement",
    "front-packages/shared",
    "front-packages/akeneo-design-system",
    "src/Akeneo/Connectivity/Connection/front",
    "src/Akeneo/Connectivity/Connection/workspaces/permission-form",
    "src/Akeneo/Pim/Automation/DataQualityInsights/front",
    "src/Akeneo/Platform/Bundle/CatalogVolumeMonitoringBundle/front",
    "src/Akeneo/Platform/Job/front/process-tracker",
    "src/Akeneo/Platform/Bundle/CommunicationChannelBundle/front",
    "src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/legacy-bridge",
    "src/Akeneo/Pim/Structure/Bundle/Resources/workspaces/settings-ui",
    "src/Akeneo/UserManagement/Bundle/Resources/workspaces/user-ui",
    "src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/activity",
    "src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/system",
    "src/Akeneo/Pim/Enrichment/Bundle/Resources/workspaces/enrichment"
  ],
  "dependencies": {
    "babel-polyfill": "*",
    "core-js": "<3.0.0",
    "cucumber": "*",
    "eslint": "*",
    "expose-loader": "<1.0.0",
    "extra-watch-webpack-plugin": "*",
    "html-webpack-inline-source-plugin": "*",
    "html-webpack-plugin": "<4.0.0",
    "imports-loader": "<1.0.0",
    "jest": "*",
    "jest-fetch-mock": "*",
    "json-schema-to-typescript": "<8.0.0",
    "prettier": "*",
    "react-markdown": "*",
    "react-redux": "*",
    "redux": "*",
    "redux-devtools-extension": "*",
    "summernote": "*",
    "thread-loader": "*",
    "ts-loader": "<9.0.0",
    "typescript-plugin-styled-components": "*",
    "webpack": "^4.44.2",
    "webpack-cli": "*",
    "yamljs": "*"
  }
}
