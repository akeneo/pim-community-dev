<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Akeneo - {% endblock %}</title>
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />

        {% block head_css %}
        <link rel="stylesheet" href="{{ asset('bundles/bapui/css/smoothness/jquery-ui-1.9.1.custom.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/bapui/css/main-bap.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/bapui/css/icons-fugue.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/pimui/css/main-pim.css') }}" />
        {% endblock %}
    </head>
    <body>
        <div id="body-wrapper">

            {% block header %}
            <div id="header" class="ui-corner-bl ui-corner-br">
                <a class="logo" href="{{ path('_welcome') }}">
                    <img src="{{ asset('bundles/pimui/images/logo-akeneo.gif') }}" alt="Akeneo logo" />
                </a>
            
                <ul class="switch-language">
                    {% set route_params = app.request.attributes.get('_route_params') %}
                    {% if route_params == "" %}
                        {% set route_params = [] %}
                    {% endif %}
                    <li>
                        <a href="{{ path(
                            app.request.attributes.get('_route'),
                            route_params | merge({"_locale": "en"})
                        ) }}" class="ui-icon-flag-us"></a>
                    </li>
                    <li>
                        <a href="{{ path(
                            app.request.attributes.get('_route'),
                            route_params | merge({"_locale": "fr"})
                        ) }}" data-role="button" class="ui-icon-flag-fr"></a>
                    </li>
                </ul>
            </div>
            {% endblock %}

            {% block main_menu %}{% endblock %}

            <div class="content ui-corner-all">

                {% block content_menu %}
                    <ul id="menu">
                        {% block content_menu_more %}
                            <li>
                                <a href="{{ path('pim_dashboard_default_index') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
                                    <span class="ui-button-icon-primary ui-icon ui-icon-fugue-home"></span>
                                    <span class="ui-button-text">{{ "bap.navigation.back-home" | trans }}</span>
                                </a>
                            </li>
                        {% endblock %}
                    </ul>
                    <div style="clear: both"></div>
                {% endblock %}

                {% for key, flashMessage in app.session.flashes %}
                    <div class="flash-message">
                        <ul>
                            <li class="{{ key }}">{{ flashMessage }}</li>
                        </ul>
                    </div>
                {% endfor %}

                {% block leftcolumn %}{% endblock %}

                {% block content %}{% endblock %}

                {% block rightcolumn %}{% endblock %}
            </div>

            <div id="footer">
                {% block footer %}
                <p><em>The future of catalog management is open ! {{ "pim.footer.akeneo.copyright" | trans }}.</em></p>
                {% endblock %}
            </div>
        </div>
        {% block afterfooter %}{% endblock %}

        {% block js_libs %}
        <script type="text/javascript" src="{{ asset('bundles/bapui/js/jquery-1.8.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/bapui/js/jquery-ui-1.9.1.custom.min.js') }}"></script>
        {% endblock %}
        
        {% block js_scripts %}{% endblock %}

    </body>
</html>
