{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "RequestBody",
  "description": "This document describes the details of the request body for tenant creation",
  "type": "object",
  "properties": {
    "instanceName": {
      "description": "The tenant name",
      "type": "string"
    },
    "mailer": {
      "description": "Mailgun configuration for the tenant",
      "type": "object",
      "properties": {
        "login": {
          "description": "Mailgun login (email) for the tenant",
          "type": "string",
          "format": "email"
        },
        "password": {
          "description": "Mailgun password for the login account",
          "type": "string"
        },
        "base_mailer_url": {
          "description": "Mailgun base url",
          "type": "string",
          "format": "uri",
          "pattern": "^smtp://"
        },
        "domain": {
          "description": "The Mailgun domain to create the account",
          "type": "string"
        },
        "api_key": {
          "description": "The Mailgun API key",
          "type": "string"
        }
      },
      "required": [
        "login",
        "password",
        "base_mailer_url",
        "domain",
        "api_key"
      ]
    },
    "pim": {
      "description": "The PIM configuration for the tenant",
      "type": "object",
      "properties": {
        "monitoring": {
          "description": "The monitoring configuration for the PIM",
          "type": "object",
          "properties": {
            "authenticationToken": {
              "description": "New token for the PIM monitoring",
              "type": "string"
            }
          },
          "required": [
            "authenticationToken"
          ]
        }
      },
      "required": [
        "monitoring"
      ]
    }
  },
  "required": [
    "instanceName",
    "mailer",
    "pim"
  ]
}
