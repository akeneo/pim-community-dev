{
  "name": "pim-community-dev",
  "version": "1.8.0",
  "description": "Akeneo PIM Application",
  "homepage": "http://www.akeneo.com",
  "scripts": {
    "webpack": "webpack --display-error-details --config webpack.config.js --progress --env=prod",
    "webpack-watch": "webpack --progress --config webpack.config.js --watch",
    "webpack-jasmine": "node ./node_modules/karma/bin/karma start --single-run",
    "lint": "node ./node_modules/eslint/bin/eslint 'src/**/*.js' --ignore-path .eslintignore --quiet",
    "lint-fix": "node ./node_modules/eslint/bin/eslint 'src/**/*.js' --ignore-path .eslintignore --quiet --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akeneo/pim-community-dev.git"
  },
  "license": "OSL-3.0",
  "bugs": {
    "url": "https://github.com/akeneo/pim-community-dev/issues"
  },
  "standard": {
    "globals": [
      "Translator",
      "require",
      "define",
      "module",
      "__dirname",
      "__moduleConfig",
      "__contextPlaceholder",
      "__contextPaths",
      "Backbone",
      "$"
    ],
    "ignore": [
      "src/**/lib/**/*.js",
      "src/**/DataGridBundle/**/*.js",
      "src/**/NavigationBundle/**/*.js",
      "src/Oro/**/**/*.js",
      "src/**/js/jstree/**.js",
      "src/**/js/tree-**.js",
      "src/**/js/jquery**.js",
      "src/Pim/Bundle/EnrichBundle/Resources/public/spec/**/*.js"
    ]
  },
  "dependencies": {
    "JSON2": "0.1.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-rewire-exports": "^0.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babili": "^0.1.4",
    "backbone": "0.9.10",
    "bundle-loader": "0.5.5",
    "codemirror": "5.25.2",
    "deepmerge": "1.3.2",
    "eslint": "3.19.0",
    "exports-loader": "0.6.4",
    "expose-loader": "0.7.3",
    "glob-to-regexp": "0.3.0",
    "html-loader": "0.4.5",
    "imports-loader": "0.7.1",
    "jasmine-core": "2.6.2",
    "jasmine-webpack-plugin": "0.1.1",
    "jquery": "1.11.0",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.1.1",
    "karma-es6-shim": "1.0.0",
    "karma-jasmine": "1.1.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "2.0.4",
    "loader-utils": "1.1.0",
    "lodash": "4.17.4",
    "merge-objects": "1.0.5",
    "pascal-case": "2.0.1",
    "raw-loader": "0.5.1",
    "regexp-replace-loader": "1.0.0",
    "source-list-map": "^2.0.0",
    "summernote": "0.6.5",
    "text-loader": "0.0.1",
    "underscore": "1.8.3",
    "webpack": "^3.1.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-dev-server": "^2.5.1",
    "webpack-livereload-plugin": "^0.11.0",
    "webpack-sources": "^1.0.1",
    "write-file-webpack-plugin": "^4.1.0",
    "yamljs": "0.2.10"
  },

  "devDependencies": {
    "standard": "*"
  }
}
