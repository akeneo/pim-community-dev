
$('.from-modified[data-async-content]').on('mouseover', function () {
    var $this = $(this);
    var url = $this.data('async-content');

    $this.off('mouseover');
    $.get(url, function (data) {
        var message = data;
        $this.attr('data-content', message).data('popover').setContent();
    });
});
