    "version": "0.0.1",
    "description": "Akeneo design system",
    "main": "lib/index.js",
    "scripts": {
        "prebuild": "rimraf lib && yarn test && yarn ts-build",
        "ts-build": "tsc -p ./tsconfig.build.json --emitDeclarationOnly",
        "check-types": "tsc",
        "check-types:watch": "yarn check-types -- --watch",
