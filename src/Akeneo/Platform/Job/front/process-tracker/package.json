{
  "name": "@akeneo-pim-community/process-tracker",
  "version": "0.1.0",
  "private": true,
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "testing-library/no-unnecessary-act": "off",
      "testing-library/prefer-presence-queries": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8080",
  "main": "lib/index.js",
  "jest": {
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/FakePIM.tsx",
      "<rootDir>/src/feature/ColumnsTab.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "scripts": {
    "app:start": "yarn translation:build && yarn route:build && yarn packages:build && react-scripts start",
    "test:unit:run": "react-scripts test --watchAll=false --coverage --coverageDirectory=coverage --maxWorkers=3",
    "test:unit:watch": "react-scripts test --maxWorkers=3",
    "lib:build": "echo 'Building Process Tracker lib...' && tsc -p ./tsconfig.build.json && echo 'Done!'",
    "translation:build": "cp ../../../../../../public/js/translation/en_US.js ./src/translations.json",
    "route:build": "cp ../../../../../../public/js/fos_js_routes.json ./src/routes.json",
    "packages:build": "yarn workspace akeneo-design-system lib:build && yarn workspace @akeneo-pim-community/shared run lib:build",
    "lint:fix": "prettier --config .prettierrc.json --parser typescript --write \"./src/**/*.{ts,tsx}\"",
    "lint": "prettier --config .prettierrc.json --parser typescript --check \"./src/**/*.{ts,tsx}\" && yarn eslint --max-warnings 0 --ext .tsx,.ts ./src"
  },
  "dependencies": {
    "@types/react-router": "<6.0.0",
    "@types/react-router-dom": "<6.0.0",
    "eslint": "*",
    "jest": "*",
    "jest-fetch-mock": "*",
    "prettier": "*",
    "react-router": "<6.0.0",
    "react-router-dom": "<6.0.0",
    "react-scripts": "*",
    "typescript": "*"
  }
}
