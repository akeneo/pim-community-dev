{% extends 'PimUserBundle::layout.html.twig' %}

{% block bodyClass %}AknLogin{% endblock %}

{% block content %}
<div class="AknLogin-mainContainer container">
    <div class="AknLogin-title">
        {% embed 'PimUIBundle::logo.html.twig' %}{% endembed %}
    </div>

    {% if error %}
        <div class="AknMessageBox AknMessageBox--error">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('oro_user_security_check') }}" method="post" class="form-signin form-inline">
        <fieldset>
            <div class="AknLogin-form">
                <input class="AknLogin-formInput" type="text" id="prependedInput" autofocus="autofocus" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'Username or Email'|trans }}" size="1"/>
                <input class="AknLogin-formInput" type="password" id="prependedInput2" name="_password" required="required" placeholder="{{ 'Password'|trans }}" autocomplete="off" size="1"/>
                <button class="AknButton AknButton--apply AknButton--big AknButton--uppercase" type="submit" id="_submit" name="_submit">{{ 'Log in'|trans }}</button>
            </div>
            <div class="AknLogin-form">
                <label class="checkbox remember-me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'Remember me on this computer'|trans }}
                </label>
                <div class="signin-help">
                    <a class="AknLogin-link" href="{{ path('oro_user_reset_request') }}">{{ 'Forgot your password?'|trans }}</a>
                </div>
            </div>
        </fieldset>
        <input type="hidden" name="_target_path" value="" />
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    </form>
</div>

<script type="text/javascript">
    require(['oro/layout'], function (layout) {
        $(function () {
            layout.init();
            document.title = '{{ 'Login'|trans }}';
        });
    });
</script>
{% endblock content %}
