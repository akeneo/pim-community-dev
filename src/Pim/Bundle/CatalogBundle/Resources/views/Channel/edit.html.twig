{% extends 'PimCatalogBundle::layout.html.twig' %}

{% oro_title_set({ params: { "%channel.name%": form.vars.value.name } }) %}

{% block content %}

    {{ JSFV(form) }}
    <form id="{{ form.vars.id }}" class="form-horizontal" action="{{ form.vars.value.id ?
        path('pim_catalog_channel_edit', { id: form.vars.value.id }) :
        path('pim_catalog_channel_create') }}" method="POST">

        {% set title = form.vars.value.id ? 'channel.edit'|trans ~ ' - ' ~ form.vars.value.name : 'channel.create'|trans %}

        {% set buttons %}
            {{ elements.backLink(path('pim_catalog_channel_index')) }}
            {% if form.vars.value.id %}
                {{ elements.deleteLink(path('pim_catalog_channel_remove', { id: form.vars.value.id }), path('pim_catalog_channel_index'), 'confirmation.remove.channel'|trans({"%name%": form.vars.value.name}), "", "flash.channel.removed"|trans) }}
            {% endif %}
            {{ elements.submitBtn() }}
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        <div class="row-fluid">
            {{ elements.form_errors(form) }}

            {{ form_row(form.id) }}

            {{ form_row(form.code) }}

            {{ form_row(form.name) }}

            {{ form_row(form.currencies) }}

            {{ form_row(form.locales) }}

            {{ form_row(form.category) }}

            {{ form_row(form._token) }}
        </div>
    </form>
{% endblock %}
