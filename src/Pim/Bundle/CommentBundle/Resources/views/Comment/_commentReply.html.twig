{% set fullname = reply.author|oro_format_name|default('N/A') %}

<div class="span2 image-reply">
    <img width="45" class="img-polaroid" src="{{ reply.author.imagePath ? reply.author.imagePath | imagine_filter('avatar_med') : asset('bundles/oroui/img/info-user.png') }}" alt="{{ fullname }}"/>
</div>
<div class="span10">
    <div><strong>{{ fullname }}</strong>&nbsp;<span class="date">{{ reply.createdAt|date("F jS \\a\\t g:ia") }}</span></div>
    {{ reply.body }}
    <div class="comment-buttons">
        {% include 'PimCommentBundle:Comment:_buttons.html.twig' with {'comment': reply} %}
    </div>
</div>
