<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    beStrictAboutTestsThatDoNotTestAnything="false"
    bootstrap="../../../../config/bootstrap.php">

    <php>
        <ini name="date.timezone" value="Europe/Paris"/>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
        <ini name="zend.enable_gc" value="1"/>
        <server name="KERNEL_CLASS" value="Kernel" force="true" />
    </php>

    <testsuites>
        <testsuite name="Syndication_Integration_Test">
            <directory>Integration</directory>
        </testsuite>
        <testsuite name="Syndication_Acceptance_Test">
            <directory>Acceptance/UseCases</directory>
            <directory>Acceptance/Hydrator</directory>
            <exclude>Acceptance/UseCases/Attribute/HandleAssetCollectionValueTest.php</exclude>
            <exclude>Acceptance/UseCases/Attribute/HandleReferenceEntityCollectionValueTest.php</exclude>
            <exclude>Acceptance/UseCases/Attribute/HandleReferenceEntityValueTest.php</exclude>
            <exclude>Acceptance/Hydrator/Value/Attribute/AssetCollectionValueHydratorTest.php</exclude>
            <exclude>Acceptance/Hydrator/Value/Attribute/ReferenceEntityCollectionValueHydratorTest.php</exclude>
            <exclude>Acceptance/Hydrator/Value/Attribute/ReferenceEntityValueHydratorTest.php</exclude>
        </testsuite>
    </testsuites>
</phpunit>
