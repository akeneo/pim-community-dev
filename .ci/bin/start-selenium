#!/usr/bin/env bash
set -eu -o pipefail

xvfb-run -n 99 --server-args="-screen 0 1360x1020x24 -ac +extension RANDR" java -Xms1g -Xmx1g -jar /opt/selenium/selenium-server-standalone.jar&
until $(curl --output /dev/null --silent --head --fail http://localhost:4444/wd/hub); do
    printf '.'
    sleep 1
done
echo "Selenium ready !!!!"
