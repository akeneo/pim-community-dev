{
    "request": {
        "method": "PATCH",
        "route": "akeneo_asset_manager_asset_family_rest_connector_create_or_update",
        "query": {
            "assetFamilyIdentifier": "brand"
        },
        "body": {
            "code": "brand",
            "labels": {
                "en_US": "Label for an activated locale"
            },
            "product_link_rules": [],
            "transformations": [],
            "naming_convention": {
                "source": {"property":  "attribute_as_main_media", "locale": "en_US", "channel": null},
                "pattern": "/invalid_pattern)"
            }
        }
    },
    "response": {
        "status": 422,
        "body": {
            "code": 422,
            "message": "The asset family has data that does not comply with the business rules.",
            "errors": [
                {
                    "property": "naming_convention[source]",
                    "message": "Attribute \"media\" is not localizable, you cannot define a locale"
                },
                {
                    "property": "naming_convention[pattern]",
                    "message": "The regular expression \"/invalid_pattern)\" is malformed."
                },
                {
                    "property": "naming_convention[abort_asset_creation_on_error]",
                    "message": "This field is missing."
                }
            ]
        }
    }
}
