{% extends 'PimEnrichBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}
    {% include "PimEnrichBundle:CategoryTree:_scripts.html.twig" %}
{% endblock %}

{% block content %}
    <div id="category-tree-container" class="row-fluid">
        <div id="tree" {% if can_edit %} data-editable="true"{% endif %}{% if can_create %} data-creatable="true"{% endif %}></div>

        <div id="category-form">
            <div class="sub-title buffer-extra-top buffer-left fullwidth text-center">
                {% if can_edit %}
                    {{ 'category.suggest selection'|trans }}
                {% endif %}
                {% if can_create %}
                    <br/>
                    <br/>
                    {{ 'category.or'|trans }}
                    <a href="{{ path(category_route('categorytree_create', related_entity)) }}">
                        <span class="label link-label large">{{ 'category.create new'|trans }}</span>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
