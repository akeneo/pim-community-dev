<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals="false"
        backupStaticAttributes="false"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        processIsolation="true"
        stopOnFailure="false"
        bootstrap="../../../config/bootstrap.php">
    <php>
        <ini name="date.timezone" value="UTC"/>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
        <ini name="zend.enable_gc" value="1"/>
        <server name="APP_ENV" value="test" force="true" />
        <server name="KERNEL_CLASS" value="Kernel" force="true" />
    </php>

    <testsuites>
        <testsuite name="Onboarder_Serenity_Integration_Test">
            <directory suffix="Integration.php">Integration</directory>
        </testsuite>
        <testsuite name="Onboarder_Serenity_Unit_Test">
            <directory suffix="Test.php">Unit</directory>
        </testsuite>
    </testsuites>

</phpunit>
