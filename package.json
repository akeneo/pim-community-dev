{
  "name": "pim-enterprise-dev",
  "version": "3.2.0",
  "description": "Akeneo PIM Enterprise Application",
  "homepage": "http://www.akeneo.com",
  "private": true,
  "config": {
    "source": "vendor/akeneo/pim-community-dev",
    "styles": "vendor/akeneo/pim-community-dev/frontend/build/compile-less.js"
  },
  "scripts": {
    "requirements": "node $npm_package_config_source/frontend/build/check-requirements.js",
    "webpack": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --config $npm_package_config_source/webpack.config.js --env=prod",
    "webpack-dev": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --config $npm_package_config_source/webpack.config.js",
    "webpack-watch": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --progress --config $npm_package_config_source/webpack.config.js --watch",
    "prettier:run": "prettier --config $npm_package_config_source/.prettierrc.json --parser typescript --write \"./{src,tests}/**/*.{js,ts,tsx}\"",
    "prettier:check": "prettier --check --config $npm_package_config_source/.prettierrc.json --parser typescript \"./{src,tests}/**/*.{ts,tsx,js}\" && yarn packages:lint:check",
    "before-commit": "yarn lint && yarn test",
    "test": "yarn unit && yarn webpack-test --env=prod && yarn integration && yarn acceptance-re && yarn acceptance-am && yarn acceptance tests/features && yarn acceptance $npm_package_config_source/tests/features",
    "webpack-test": "yarn generate-models && webpack --config $npm_package_config_source/webpack-test.config.js",
    "lint": "yarn prettier:check && eslint 'src/**/*.js' --config $npm_package_config_source/.eslintrc --quiet --ignore-path $npm_package_config_source/.eslintignore",
    "lint-fix": "yarn prettier:run && eslint 'src/**/*.js' --config $npm_package_config_source/.eslintrc --quiet --ignore-path $npm_package_config_source/.eslintignore --fix",
    "tslint": "node ./node_modules/tslint/bin/tslint",
    "unit": "yarn packages:unit && jest --coverage --config tests/front/unit/jest/unit.jest.js --maxWorkers=4",
    "integration": "jest --maxWorkers=4 --config $npm_package_config_source/tests/front/integration/jest/integration.jest.js",
    "acceptance": "RANDOM_LATENCY=false NODE_PATH=./node_modules cucumber-js --tags @acceptance-front -r ./frontend/test/acceptance/run-steps.js",
    "acceptance-am": "RANDOM_LATENCY=false NODE_PATH=./node_modules cucumber-js --tags @acceptance-front -r ./src/Akeneo/Pim/Enrichment/AssetManager/tests/front/acceptance/run-steps.js src/Akeneo/Pim/Enrichment/AssetManager/tests/front/features",
    "acceptance-re": "RANDOM_LATENCY=false NODE_PATH=./node_modules cucumber-js --tags @acceptance-front -r ./src/Akeneo/ReferenceEntity/tests/front/acceptance/run-steps.js src/Akeneo/ReferenceEntity/tests/features",
    "acceptance-report": "NODE_PATH=./node_modules yarn run acceptance -- -f json:public/test_dist/acceptance-js.json && node $npm_package_config_source/frontend/test/acceptance/generate-html-report.js",
    "less": "node $npm_package_config_styles",
    "update-extensions": "node $npm_package_config_source/frontend/build/update-extensions.js",
    "generate-asset-manager-models": "node $npm_package_config_source/frontend/build/json-schema-to-typescript.js src/Akeneo/AssetManager/definitions/ public/bundles/akeneoassetmanager/infrastructure/model/",
    "tailored-export:build": "yarn workspace @akeneo-pim-enterprise/tailored-export lib:build",
    "tailored-import:build": "yarn workspace @akeneo-pim-enterprise/tailored-import lib:build",
    "job-automation:build": "yarn workspace @akeneo-pim-enterprise/job-automation lib:build",
    "onboarder:build": "yarn workspace @akeneo-pim-enterprise/onboarder-retailer lib:build",
    "free-trial:build": "yarn workspace akeneo-pim-free-trial install --frozen-lockfile && yarn workspace akeneo-pim-free-trial lib:build",
    "generate-models": "yarn generate-asset-manager-models && yarn workspace @akeneo-pim-community/communication-channel generate-models",
    "packages:build": "yarn workspace pim-community-dev packages:build && yarn enterprise-packages:build",
    "packages:unit": "yarn workspace pim-community-dev packages:unit && yarn enterprise-packages:unit",
    "enterprise-packages:unit": "yarn workspace @akeneo-pim-enterprise/tailored-export test:unit:run && yarn workspace @akeneo-pim-enterprise/tailored-import test:unit:run && yarn workspace @akeneo-pim-enterprise/job-automation test:unit:run && yarn workspace akeneo-pim-free-trial test:unit:run",
    "packages:lint:check": "yarn workspace @akeneo-pim-enterprise/tailored-export lint:check && yarn workspace @akeneo-pim-enterprise/tailored-import lint:check && yarn workspace @akeneo-pim-enterprise/job-automation lint:check && yarn workspace akeneo-pim-free-trial lint:check",
    "enterprise-packages:build": "yarn tailored-export:build && yarn tailored-import:build && yarn onboarder:build && yarn job-automation:build && yarn free-trial:build",
    "dsm:build": "yarn workspace pim-community-dev dsm:build"
  },
  "devDependencies": {
    "@types/draft-js": "^0.10.25",
    "@types/draftjs-to-html": "^0.8.0",
    "@types/html-to-draftjs": "^1.4.0",
    "@types/react": "^16.14.0",
    "@types/react-draft-wysiwyg": "^1.13.0",
    "@types/react-redux": "^7.1.0",
    "@types/resize-observer-browser": "^0.1.3",
    "@types/styled-components": "^5.1.1",
    "babel-plugin-styled-components": "^1.10.6",
    "del": "^6.0.0",
    "mutationobserver-shim": "^0.3.5",
    "redux-devtools-extension": "^2.13.2",
    "ts-jest": "^26.5.5",
    "tslint": "^5.12.1",
    "tslint-react": "^4.0.0"
  },
  "dependencies": {
    "draft-js": "^0.10.5",
    "draftjs-to-html": "^0.8.4",
    "html-to-draftjs": "^1.4.0",
    "jsoneditor-react": "^2.0.0",
    "p-limit": "^2.0.0",
    "p-queue": "^6.2.1",
    "react-draft-wysiwyg": "^1.12.13",
    "react-dragula": "^1.1.17",
    "react-redux": "^7.1.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "uuid": "^3.3.3"
  },
  "resolutions": {
    "jest/**/ip-regex": "2.1.0"
  },
  "workspaces": [
    "components/tailored-export/front",
    "components/tailored-import/front",
    "components/onboarder-retailer/front",
    "components/job-automation/front",
    "grth/src/Akeneo/Pim/TableAttribute/front",
    "src/Akeneo/Pim/Automation/DataQualityInsights/front",
    "src/Akeneo/Pim/Automation/RuleEngine/front",
    "src/Akeneo/Pim/Structure/Bundle/Resources/workspaces/settings-ui",
    "src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/activity",
    "vendor/akeneo/pim-community-dev",
    "vendor/akeneo/pim-community-dev/front-packages/measurement",
    "vendor/akeneo/pim-community-dev/front-packages/shared",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Connectivity/Connection/front",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Connectivity/Connection/workspaces/permission-form",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Pim/Automation/DataQualityInsights/front",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Pim/Enrichment/Bundle/Resources/workspaces/enrichment",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Pim/Structure/Bundle/Resources/workspaces/settings-ui",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Platform/Bundle/CatalogVolumeMonitoringBundle/front",
    "vendor/akeneo/pim-community-dev/src/Oro/Bundle/ConfigBundle/front",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Platform/Bundle/CommunicationChannelBundle/front",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/activity",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/legacy-bridge",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Platform/Bundle/UIBundle/Resources/workspaces/system",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Platform/Job/front/process-tracker",
    "vendor/akeneo/pim-community-dev/src/Akeneo/UserManagement/Bundle/Resources/workspaces/user-ui",
    "vendor/akeneo/pim-community-dev/components/catalogs/front",
    "tria/front-packages/free-trial"
  ]
}
