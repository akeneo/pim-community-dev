{
  "name": "pim-enterprise-standard",
  "description": "Akeneo PIM Enterprise Standard Edition",
  "homepage": "http://www.akeneo.com",
  "private": true,
  "config": {
    "source": "vendor/akeneo/pim-community-dev",
    "styles": "vendor/akeneo/pim-community-dev/frontend/build/compile-less.js"
  },
  "scripts": {
    "requirements": "node $npm_package_config_source/frontend/build/check-requirements.js",
    "webpack": "yarn requirements && yarn generate-asset-manager-models && NODE_PATH=node_modules webpack --config $npm_package_config_source/webpack.config.js --env=prod",
    "webpack-dev": "yarn requirements && yarn generate-asset-manager-models && NODE_PATH=node_modules webpack --config $npm_package_config_source/webpack.config.js",
    "less": "node $npm_package_config_styles",
    "update-extensions": "node vendor/akeneo/pim-community-dev/frontend/build/update-extensions.js",
    "generate-asset-manager-models": "node vendor/akeneo/pim-enterprise-dev/frontend/build/json-schema-to-typescript.js vendor/akeneo/pim-enterprise-dev/src/Akeneo/AssetManager/definitions/ public/bundles/akeneoassetmanager/infrastructure/model/"
  },
  "workspaces": [
    "vendor/akeneo/pim-enterprise-dev",
    "vendor/akeneo/pim-community-dev",
    "vendor/akeneo/pim-community-dev/src/Akeneo/Apps/front",
    "vendor/akeneo/pim-enterprise-dev/src/Akeneo/Pim/Automation/DataQualityInsights/front"
  ]
}
