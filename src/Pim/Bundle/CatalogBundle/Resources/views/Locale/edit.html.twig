{% extends 'PimCatalogBundle::layout.html.twig' %}

{% oro_title_set({ params: { "%locale.code%": form.vars.value.code } }) %}

{% block content %}

    {{ JSFV(form) }}
    <form id="{{ form.vars.id }}" class="form-horizontal" action="{{ path('pim_catalog_locale_edit', { id: form.vars.value.id }) }}" method="POST">

        {% set title = 'locale.edit'|trans ~ ' - ' ~ localizedLabel(form.vars.value.code) %}

        {% set buttons %}
            {{ elements.backLink(path('pim_catalog_locale_index')) }}
            {{ elements.submitBtn() }}
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        <div class="row-fluid">
            {{ elements.form_errors(form) }}

            {{ form_row(form.id) }}

            {{ form_row(form.code) }}

            {{ form_row(form.defaultCurrency) }}

            {{ form_row(form._token) }}
        </div>
    </form>
{% endblock %}
