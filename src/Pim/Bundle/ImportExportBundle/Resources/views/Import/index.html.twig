{% extends 'PimImportExportBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#import-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block page_container %}
<div class="container-fluid">
    {% block content %}

    {% set title = 'Import overview'|trans %}

    {% set buttons %}
    <div class="btn-group">
        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-plus icon-white"></i>{{ 'New import'|trans }}</a>
        <ul class="dropdown-menu pull-right">
            {% for connector, jobs in connectors %}
            <li class="disabled"><a href="#"><b>{{ connector }}</b></a></li>
                {% for alias, job in jobs %}
                <li><a href="{{ path('pim_ie_import_create', { 'connector': connector, 'alias': alias }) }}">{{ job.name|trans }}</a></li>
                {% endfor %}
            {% endfor %}
        </ul>
    </div>
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div id="import-grid"></div>

    {% endblock %}
</div>
{% endblock %}
