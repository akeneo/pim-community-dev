{
  "name": "pim-community-dev",
  "version": "3.2.0",
  "description": "Akeneo PIM Application",
  "homepage": "https://www.akeneo.com/",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "dontputthishere:postinstall": "yarn update-extensions && yarn generate-models && yarn dsm:build",
    "dsm:build": "cd front-packages/akeneo-design-system && yarn install --immutable --immutable-cache && yarn lib:build",
    "less": "node frontend/build/compile-less.js",
    "generate-models": "yarn workspaces foreach --verbose run generate:models",
    "packages:build": "yarn workspaces foreach --verbose --parallel run build",
    "requirements": "node frontend/build/check-requirements.js",
    "update-extensions": "node frontend/build/update-extensions.js",
    "lint": "prettier --check --config .prettierrc.json --parser typescript \"./src/**/*.{js,ts,tsx}\" && eslint src/**/*.js --config .eslintrc --ignore-path .eslintignore --quiet",
    "lint:fix": "prettier --write --config .prettierrc.json --parser typescript --loglevel=warn \"./src/**/*.{js,ts,tsx}\" && eslint src/**/*.js' --config .eslintrc --ignore-path .eslintignore --quiet --fix",
    "packages:lint": "yarn workspaces foreach --parallel --verbose run lint || echo 'A workspace failed!' && false",
    "packages:lint:fix": "yarn workspaces foreach --parallel --verbose run lint:fix || echo 'A workspace failed!' && false",
    "test": "yarn workspaces foreach --verbose run test:unit:run && yarn test:webpack --env=prod && yarn test:integration && yarn test:acceptance",
    "test:webpack": "yarn generate-models && webpack --config webpack-test.config.js",
    "test:unit": "jest --no-cache --config tests/front/unit/jest/unit.jest.js --runInBand",
    "test:integration": "jest --no-cache --config tests/front/integration/jest/integration.jest.js",
    "test:acceptance": "cucumber-js --tags @acceptance-front -r frontend/test/acceptance/run-steps.js -r tests/front/acceptance/cucumber tests/features",
    "test:acceptance:html-report": "yarn test:acceptance tests/features/ -f json:public/test_dist/acceptance-js.json && node frontend/test/acceptance/generate-html-report.js",
    "test:e2e:open": "cypress open",
    "test:e2e:run": "cypress run",
    "webpack": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --config webpack.config.js --env=prod",
    "webpack-dev": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --config webpack.config.js",
    "webpack-watch": "yarn requirements && yarn generate-models && NODE_PATH=node_modules webpack --progress --config webpack.config.js --watch",
    "before-commit": "yarn prettier && yarn lint && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akeneo/pim-community-dev.git"
