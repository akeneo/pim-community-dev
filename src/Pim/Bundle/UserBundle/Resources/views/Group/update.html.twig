{% import 'PimUIBundle:Default:page_elements.html.twig' as elements %}
{% import 'PimDataGridBundle::macros.html.twig' as dataGrid %}

<script type="text/javascript">
    require('pim/page-title').set({'group': '{{ form.vars.value.name }}'});
</script>

{% set entityId = form.vars.value.id %}

{% block content %}
    {{ JSFV(form) }}
    {{ form_start(form, {
        'action': entityId ?
            path('oro_user_group_update', { 'id': entityId }) :
            path('oro_user_group_create'),
        'attr': {
            'data-updated-title': 'confirmation.leave'|trans,
            'data-updated-message': 'confirmation.discard changes'|trans({ '%entity%': 'group.title'|trans })
        }
    }) }}

        {% set title = entityId ? 'group.edit'|trans ~ ' - ' ~ form.vars.value.name : 'group.create'|trans %}

        {% set buttons %}
            {{ elements.backLink(path('oro_user_group_index')) }}
            {% if entityId %}
                {{ elements.deleteLink(
                    path('oro_user_group_delete', { 'id': entityId }),
                    'pim_user_group_remove',
                    path('oro_user_group_index'),
                    'confirmation.remove.group'|trans({ '%name%': form.vars.value.name }),
                    'flash.group.removed'|trans
                ) }}
            {% endif %}
            {{ elements.submitBtn('', 'ok') }}
        {% endset %}

        {{ elements.page_header(title, buttons, null, null, elements.updated(form.vars.id)) }}

        {{ elements.form_navbar(view_element_aliases(form.vars.id ~ '.form_tab')) }}

        <div class="row-fluid tab-content">
            {{ elements.form_errors(form) }}
            {{ view_elements(form.vars.id ~ '.form_tab') }}
        </div>

    {{ form_end(form) }}
{% endblock content %}
