{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es2015", "es2016", "es2017","es2018", "es2019"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./public/bundles",
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/tests/**/*"],
  "include": [
    "node_modules/@akeneo-pim-community",
    "public/bundles",
    "frontend/types.d.ts"
  ]
}
