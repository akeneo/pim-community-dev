                            <p class="text-center">{{ 'Configure'|trans }}</p>
                            <a href="javascript:void(0);" class="widget-image configure-image"></a>
                        </div>
                        <div class="list-wrap pull-left">
                            <ul class="nav nav-list">
                                <li class=""><a href="{{ path('pim_product_productattribute_index') }}">{{ 'Manage attributes'|trans }}</a></li>
                                <li class=""><a href="{{ path('pim_product_family_index') }}">{{ 'Manage families'|trans }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="version-container">
            <strong>Version:</strong> 1.0.0-alpha3
        </div>
    </div>
