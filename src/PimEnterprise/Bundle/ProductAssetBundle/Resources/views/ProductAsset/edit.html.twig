{% extends 'PimEnrichBundle::layout.html.twig' %}
{% import '@PimEnterpriseProductAsset/ProductAsset/macros.html.twig' as pamMacros %}

{% oro_title_set({ params: { "%asset.code%": asset.code } }) %}

{% block head_script %}
    {{ parent() }}
    {% include 'PimEnterpriseProductAssetBundle:ProductAsset:_js-handler.html.twig' %}
{% endblock %}

{% if elements is not defined %}
    {% import 'PimUIBundle:Default:page_elements.html.twig' as elements %}
{% endif %}

{% block content %}
    {% set actionQueryParams = {id: asset.id} %}
    {% if app.request.get('locale') %}
        {% set actionQueryParams = actionQueryParams|merge({locale: app.request.get('locale')}) %}
    {% endif %}
    {{ form_start(form, {
        'action': path('pimee_product_asset_edit', actionQueryParams),
        'class': 'product-asset-edit',
        'attr': {
            'data-updated-title': 'confirmation.leave'|trans,
            'data-updated-message': 'confirmation.discard changes'|trans({ '%entity%': 'pimee_product_asset.asset.title'|trans })
        }
    }
    ) }}

    {% set title = 'pimee_product_asset.enrich_asset.view.title'|trans %}

    {% set buttons %}
        {% include 'PimEnterpriseProductAssetBundle:ProductAsset:_buttons.html.twig' %}
    {% endset %}

    {% set subtitle %}
        <div>{{ asset.code }}</div>
    {% endset %}

    {% set left %}
        <ul class="inline">
            <li>{{ 'Created'|trans }}: {{ asset.createdAt ? asset.createdAt|date("Y-m-d H:i:s") : 'N/A'|trans }}</li>
            <li>{{ 'Last update'|trans }}: {{ asset.updatedAt ? asset.updatedAt|date("Y-m-d H:i:s") : 'N/A'|trans }}</li>
        </ul>
    {% endset %}

    {{ elements.page_header(title, buttons, subtitle, left, elements.updated(form.vars.id)) }}

    <div class="form-horizontal product-edit product-view asset">
        <div class="layout-content">
            {% set form_tabs = ['pimee_product_asset.tabs.variations', 'pimee_product_asset.tabs.properties'] %}
            {{ elements.form_navbar(form_tabs) }}

            <div class="row-fluid tab-content">
                {% include 'PimEnterpriseProductAssetBundle:ProductAsset:_variations-tab.html.twig' %}
                {% include 'PimEnterpriseProductAssetBundle:ProductAsset:_properties-tab.html.twig' %}
            </div>

        </div>
    </div>
    {{ form_end(form) }}

    <script>
        require(
                ['pimee/productasset/variations'],
                function (AssetVariationsForm) {
                    'use strict';
                    var variations = new AssetVariationsForm();
                }
        );
    </script>
{% endblock %}
