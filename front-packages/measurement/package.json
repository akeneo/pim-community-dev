{
  "name": "@akeneo-pim-community/measurement",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:8080",
  "scripts": {
    "app:start": "yarn translation:build && yarn route:build && yarn packages:build && react-scripts start --stats-error-details",
    "test:unit:run": "react-scripts test --watchAll=false --coverage --coverageDirectory=coverage --maxWorkers=3",
    "test:unit:watch": "react-scripts test --maxWorkers=3",
    "lib:build": "echo 'Building Measurement lib...' && tsc -p ./tsconfig.build.json && echo 'Done!'",
    "translation:build": "cp ../../public/js/translation/en_US.js ./src/translations.json",
    "route:build": "cp ../../public/js/fos_js_routes.json ./src/routes.json",
    "packages:build": "yarn workspace akeneo-design-system lib:build && yarn workspace @akeneo-pim-community/shared run lib:build",
    "lint:fix": "prettier --config .prettierrc.json --parser typescript --write \"./src/**/*.{ts,tsx}\"",
    "lint": "prettier --config .prettierrc.json --parser typescript --check \"./src/**/*.{ts,tsx}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "main": "lib/index.js",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.ts",
      "shared/components/",
      "pages/create-measurement-family/CreateMeasurementFamily.tsx",
      "pages/create-unit/CreateUnit.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "functions": 50,
        "lines": 50
      }
    }
  },
  "dependencies": {
    "@types/react-router": "<6.0.0",
    "@types/react-router-dom": "<6.0.0",
    "prettier": "*",
    "react-router": "<6.0.0",
    "react-router-dom": "<6.0.0",
    "react-scripts": "*",
    "typescript": "*"
  }
}
