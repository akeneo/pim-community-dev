{% spaceless %}
{% if elements is not defined %}
    {% import 'PimUIBundle:Default:page_elements.html.twig' as elements %}
{% endif %}
{% endspaceless %}

<form id="pim_catalog_variant_group_create" method="POST" class="form-horizontal"
    data-title="{{ 'Create a new variant group'|trans }}"
    data-button-submit="{{ 'btn.save'|trans|capitalize }}"
    data-button-cancel="{{ 'btn.cancel'|trans|capitalize }}"
    action="{{ path('pim_catalog_variant_group_create') }}" {{ form_enctype(form) }}>

    {{ JSFV(form) }}

    {{ elements.form_errors(form) }}

    <div class="row-fluid">
        {{ form_row(form.code) }}
        {{ form_row(form.attributes) }}
        {{ form_row(form._token) }}
    </div>
</form>
