{% extends 'PimConfigBundle::layout.html.twig' %}

{% set title = form.vars.value.id ? 'Edit currency'|trans : 'Add currency'|trans %}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}

{% block content %}
<form class="form-horizontal" action="{{ form.vars.value.id ? 
    path('pim_config_currency_edit', { id: form.vars.value.id }) : 
    path('pim_config_currency_create') }}" method="POST" class="form-register">

    <div class="row-fluid">
        <div class="form-row">
            <h3 class="pull-left">{{ title|trans }}</h3>
            <button class="btn btn-primary pull-right" type="submit">{{ 'Save'|trans }}</button>
            <a class="btn btn-primary pull-right" href="{{ path('pim_config_currency_index') }}">
                {{ "Back to list" | trans }}
            </a>
        </div>
    </div>

    <div class="row_fluid">
        {% if form.vars.errors|length %}
            <div class="alert alert-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}
            
        {{ form_row(form.id) }}
        
        {{ form_row(form.code) }}
        
        {{ form_row(form.activated) }}
        
        {{ form_row(form._token) }}

    </div>
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
    $(function() {
        $('select').select2({ allowClear: true });
        $('input.multiselect').select2({ tags: $(this).val() });
    });
    </script>
{% endblock %}
