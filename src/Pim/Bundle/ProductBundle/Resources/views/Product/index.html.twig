{% extends 'PimProductBundle::layout.html.twig' %}

{% set title = 'Products'|trans %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#product-grid'} %}

    <script type="text/javascript">
        $(document).dialogForm({ trigger: '#create-product', url: '{{ path("pim_product_product_create") }}' });
    </script>
{% endblock %}

{% block content %}

    {% set buttons %}
        {{ elements.createBtn('New product', null, 'create-product') }}
    {% endset %}

    {% set subtitle %}
        <div id="locale-switcher" class="btn-group sub-title">
            <span class="product-name dropdown-toggle" data-toggle="dropdown">
                {{ dataLocale|flag }}
                <span class="caret"></span>
            </span>
            <ul class="dropdown-menu">
                {% for locale in locales %}
                    <li class="{{ locale.code == dataLocale ? 'activeLocale' : '' }}">
                        <a href="{{ path('pim_product_product_index', { 'dataLocale': locale.code }) }}" title="{{ locale.code }}">
                            {% if locale.code == dataLocale %}
                            <span class="icon">
                                    <i class="icon-bullet"></i>
                            </span>
                            {% endif %}
                            {{ locale.code|flag }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endset %}

    {{ elements.page_header(title, buttons, subtitle) }}

    <div class="row-fluid has-sidebar">
        <div id="tree" data-tree="view" data-assets-path="{{ asset('bundles/pimproduct/') }}" data-list-tree-url="{{ path('pim_product_categorytree_listtree', { '_format': 'json', 'dataLocale': dataLocale }) }}" data-children-url="{{ path('pim_product_categorytree_children', { '_format': 'json', 'dataLocale': dataLocale }) }}" data-unclassified-title="{{ 'Unclassified node' | trans }}"></div>
        <div id="product-grid"></div>
    </div>

{% endblock %}
