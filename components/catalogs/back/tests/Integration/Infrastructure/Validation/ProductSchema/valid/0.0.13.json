{
    "$id": "https://example.com/product",
    "$schema": "https://api.akeneo.com/mapping/product/0.0.13/schema",
    "$comment": "My first schema !",
    "title": "Product Mapping",
    "description": "JSON Schema describing the structure of products expected by our application",
    "type": "object",
    "properties": {
        "uuid": {
            "title": "Product uuid",
            "type": "string"
        },
        "name": {
            "type": "string",
            "pattern": ".*"
        },
        "body_html": {
            "title": "Description",
            "description": "Product description in raw HTML",
            "type": "string"
        },
        "is_published": {
            "type": "boolean"
        },
        "height": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "release_date": {
            "type": "string",
            "format": "date-time"
        },
        "thumbnail": {
            "type": "string",
            "format": "uri"
        },
        "thumbnail_list": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            },
            "title": "Thumbnails"
        },
        "meta_description": {
            "type": "string",
            "minLength": 50,
            "maxLength": 160
        },
        "size": {
            "type": "string",
            "enum": ["S", "M", "L"]
        },
        "colors": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["Red", "Green", "Blue", "Yellow", "Black", "White"]
            }
        }
    },
    "required": ["name", "body_html"]
}
