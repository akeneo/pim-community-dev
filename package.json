    "react-dom": "^16.8.0",
    "react-hook-form": "^5.2.0",
    "react-router-dom": "^5.1.0",
    "reakit": "^1.0.0-rc.0",
    "style-loader": "^1.0.1",
    "styled-components": "^4.3.2",
    "summernote": "0.6.16",
    "underscore": "1.8.3",
    "victory": "^33.1.6"
  },
  "resolutions": {
    "jest/**/ip-regex": "2.1.0"
  },
  "private": true,
  "workspaces": [
    "src/Akeneo/Connectivity/Connection/front",
