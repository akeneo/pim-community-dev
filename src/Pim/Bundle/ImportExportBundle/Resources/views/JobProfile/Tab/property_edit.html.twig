<div id="{{ viewElement.alias|replace({' ': '-', '.': '-'})|lower }}" class="tab-pane active">
    {% set properties %}
        {{ form_row(form.code) }}
        {{ form_row(form.label) }}
    {% endset %}

    {% set globalSettings %}
        {% for field in form.parameters %}
            {% if field.vars.attr['data-tab'] is not defined %}
                {{ form_row(field) }}
            {% endif %}
        {% endfor %}
    {% endset %}
    {{ elements.tabSections({
        'pane.accordion.properties': elements.form_container(properties),
        'pane.accordion.global_settings': elements.form_container(globalSettings)
    }) }}
</div>
