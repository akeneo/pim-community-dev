        "akeneo/batch-bundle": "0.2.*",
        "oro/platform": "1.0.0-beta13",
        "apy/jsfv-bundle": "2.0.1",
        "akeneo/phpspec-skip-example-extension": "dev-master#4aea594@dev",
        "behat/gherkin":"2.3.x-dev#c32e15d@dev",
        "behat/mink":"dev-master#63b8b26@dev",
        "behat/mink-browserkit-driver":"dev-master#357a67a@dev",
        "behat/mink-extension":"1.3.x-dev#6ca159c@dev",
        "behat/mink-selenium2-driver":"dev-master#c2d36fe@dev",
        "behat/symfony2-extension":"1.1.x-dev#7055fac@dev",
        "behat/transliterator":"dev-master#2fd406d@dev",
        "dflydev/markdown":"dev-master#dee1f7a@dev",
        "doctrine/annotations":"dev-master#6634069@dev",
        "doctrine/cache":"dev-master#daba57d@dev",
        "doctrine/collections":"dev-master#432240f@dev",
        "doctrine/common":"2.4.x-dev#ae92d07@dev",
        "doctrine/dbal":"2.4.x-dev#f15c482@dev",
        "doctrine/inflector":"dev-master#64de2fe@dev",
        "doctrine/instantiator":"dev-master#26404e0@dev",
        "doctrine/lexer":"dev-master#83893c5@dev",
        "evenement/evenement":"1.0.x-dev#8b0918f@dev",
        "gedmo/doctrine-extensions":"dev-master#fc56b46@dev",
        "guzzle/common":"dev-master#2e36af7@dev",
        "guzzle/http":"dev-master#1e8dd1e@dev",
        "guzzle/parser":"dev-master#6874d17@dev",
        "guzzle/stream":"dev-master#60c7fed@dev",
        "imagine/imagine":"0.5.x-dev#343580f@dev",
        "instaclick/php-webdriver":"dev-master#a57b2bc@dev",
        "jdorn/sql-formatter":"dev-master#ff0515f@dev",
        "jms/aop-bundle":"dev-master#93f41ab@dev",
        "jms/cg":"dev-master#3d2881f@dev",
        "jms/di-extra-bundle":"dev-master#d282aa4@dev",
        "jms/metadata":"dev-master#22b7245@dev",
        "jms/parser-lib":"dev-master#6067cc6@dev",
        "knplabs/knp-components":"dev-master#3f2fe97@dev",
        "knplabs/knp-menu":"v2.0.0-alpha2",
        "knplabs/knp-menu-bundle":"v2.0.0-alpha2",
        "kriswallsmith/buzz":"dev-master#43c355e@dev",
        "monolog/monolog":"dev-master#b3f0393@dev",
        "phpdocumentor/reflection-docblock":"dev-master#fd0ac20@dev",
        "phpspec/phpspec":"dev-master#6d5b9a0@dev",
        "phpspec/prophecy":"dev-master#ae65b1a@dev",
        "phpunit/php-code-coverage":"1.2.x-dev#fe24668@dev",
        "phpunit/phpunit-mock-objects":"1.2.x-dev#c39c451@dev",
        "psr/log":"dev-master#a78d650@dev",
        "react/event-loop":"0.3.x-dev#235cddf@dev",
        "react/socket":"0.3.x-dev#19bc0c4@dev",
        "react/stream":"0.3.x-dev#feef566@dev",
        "sebastian/exporter":"dev-master#c7d5994@dev",
        "sensiolabs/behat-page-object-extension":"1.0.x-dev#6692ad7@dev",
        "swiftmailer/swiftmailer":"dev-master#8a2bcc6@dev",
        "twig/twig":"dev-master#084ca20@dev"
    },
    "require-dev": {
        "behat/behat":  "2.5.*@stable",
        "behat/symfony2-extension":      "1.1.*",
        "behat/mink-extension":          "1.3.*@dev",
        "behat/mink-browserkit-driver":  "*",
        "behat/mink-selenium2-driver":   "*",
        "behat/common-contexts": "*",
        "sensiolabs/behat-page-object-extension": "1.0.x-dev#6692ad7237597d1f7acfdacf1c7bbb138f56e3a9",
        "kriswallsmith/buzz": ">=0.5",
        "phpspec/phpspec": "dev-master@dev",
        "akeneo/phpspec-skip-example-extension": "1.0.*@dev",
        "phpunit/phpunit": "3.7.*@stable",
        "squizlabs/php_codesniffer": "1.*@stable",
        "phpmd/phpmd": "1.*@stable",
        "pdepend/pdepend": "1.1.*@stable"
    },
    "suggest": {
        "doctrine/mongodb-odm-bundle": "In order to activate the MongoDB support within Akeneo"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/akeneo/platform.git",
            "branch": "master"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php app/console fos:js-routing:dump --target=web/js/routes.js"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php app/console fos:js-routing:dump --target=web/js/routes.js"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": {
            "keep-outdated": true,
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_host": "PIM_DATABASE_HOST",
                "database_port": "PIM_DATABASE_PORT",
                "database_name": "PIM_DATABASE_NAME",
                "database_user": "PIM_DATABASE_USER",
                "database_password": "PIM_DATABASE_PASSWORD"
            }
        },
        "branch-alias": {
            "dev-master": "1.3.x-dev",
            "dev-1.2": "1.2.x-dev",
            "dev-1.1": "1.1.x-dev",
            "dev-1.0": "1.0.x-dev"
        }
    }
}
