{% extends bap.layout %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% block head_script %}
    {{ parent() }}
    {% placeholder prepare_grid with {'datagrid': datagrid, 'selector': '#' ~ gridId} %}
{% endblock %}
{% block content %}
     <div class="container-fluid page-title">
        <h1>{{ (pageTitle is defined ? pageTitle : '')|trans }}
            {% if buttons is defined %}
                {% for button in buttons %}
                    {{ button }}
                {% endfor %}
            {% endif %}
        </h1>
     </div>
     {{ UI.gridBlock(gridId) }}
{% endblock content %}
