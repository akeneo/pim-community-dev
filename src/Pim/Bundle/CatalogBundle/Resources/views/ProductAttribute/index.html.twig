{% extends 'PimCatalogBundle::layout.html.twig' %}

{% set title = 'Attributes overview'|trans %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#attribute-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block content %}
    <div>

        {% set buttons %}
            {{ elements.createBtn('New attribute', path('pim_product_productattribute_create')) }}
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        <div id="attribute-grid"></div>
    </div>
{% endblock %}
