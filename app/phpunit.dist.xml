<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="bootstrap.php.cache" >

    <php>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
    </php>

    <testsuites>
        <testsuite name="Project Test Suite">
            <directory suffix="Test.php">../src/*/Bundle/*Bundle/Tests</directory>
            <directory suffix="Test.php">../src/*/*Bundle/Tests</directory>
        </testsuite>
        <testsuite name="PIM Test Suite">
            <directory suffix="Test.php">../src/Pim/Bundle/*Bundle/Tests</directory>
        </testsuite>
        <testsuite name="Oro Test Suite">
            <directory suffix="Test.php">../src/Oro/Bundle/*Bundle/Tests</directory>
        </testsuite>
        <testsuite name="PIM Unit Test">
            <directory suffix="Test.php">../src/Pim/Bundle/*Bundle/Tests/Unit</directory>
        </testsuite>
        <testsuite name="PIM Functional Test">
            <directory suffix="Test.php">../src/Pim/Bundle/*Bundle/Tests/Functional</directory>
        </testsuite>
        <testsuite name="PIM Performance Test">
            <directory suffix="Perf.php">../src/Pim/Bundle/*Bundle/Tests/Performance</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src/Pim</directory>
            <exclude>
                <directory>../src/*/*Bundle/Resources</directory>
                <directory>../src/*/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/Resources</directory>
                <directory>../src/*/Bundle/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/vendor</directory>
                <directory>../src/*/Bundle/*Bundle/cov</directory>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="build/coverage" title="PIM Coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        <log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
