    <span class="AknTitleContainer-metaItem">{{ 'pim_import_export.connector'|trans }}: {{ jobInstance.connector|trans }}</span>
{% endset %}

{% set titleButtons %}
    {{ elements.backLink(indexRoute) }}
{% endset %}

