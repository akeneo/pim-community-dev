{% extends 'PimConfigBundle::layout.html.twig' %}

{% block page_container %}
<div class="container-fluid">

    {% block content %}

    {{ JSFV(form) }}
    <form id="{{ form.vars.id }}" class="form-horizontal" action="{{ form.vars.value.id ?
        path('pim_config_channel_edit', { id: form.vars.value.id }) :
        path('pim_config_channel_create') }}" method="POST">

        {% set title = 'Channels'|trans %}

        {% set subtitle = form.vars.value.id ? form.vars.value.code : 'New channel'|trans %}

        {% set buttons %}
            {{ elements.backLink(path('pim_config_channel_index')) }}
            {% if form.vars.value.id %}
                {{ elements.deleteLink(path('pim_config_channel_remove', { id: form.vars.value.id }), 'Are you sure you want to delete this channel?') }}
            {% endif %}
            {{ elements.submitBtn }}
        {% endset %}

        {{ elements.page_header(title, buttons, subtitle) }}

        <div class="row-fluid">
            {{ elements.form_errors(form) }}

            {{ form_row(form.id) }}

            {{ form_row(form.code) }}

            {{ form_row(form.name) }}

            {{ form_row(form.currencies) }}

            {{ form_row(form.locales) }}

            {{ form_row(form.category) }}

            {{ form_row(form._token) }}
        </div>
    </form>
    {% endblock %}
</div>
{% endblock %}

{% block head_script_component %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/oroui/lib/backbone.bootstrap-modal.js') }}"></script>
    {% include 'PimUIBundle:Default:_back-url.html.twig' %}
{% endblock %}
