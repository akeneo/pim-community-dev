{% import 'PimUIBundle:Default:page_elements.html.twig' as elements %}
{% import '@PimEnterpriseProductAsset/ProductAsset/macros.html.twig' as pamMacros %}

{% block head_script %}
    {% include 'PimEnterpriseProductAssetBundle:ProductAsset:_js-handler.html.twig' %}
{% endblock %}

{% if elements is not defined %}
    {% import 'PimUIBundle:Default:page_elements.html.twig' as elements %}
{% endif %}

{% block content %}
    {% set actionQueryParams = {id: asset.id} %}
    {% if app.request.get('dataLocale') %}
        {% set actionQueryParams = actionQueryParams|merge({dataLocale: app.request.get('dataLocale')}) %}
    {% endif %}
    {{ form_start(form, {
        'action': path('pimee_product_asset_edit', actionQueryParams),
        'class': 'product-asset-edit',
        'attr': {
            'data-updated-title': 'confirmation.leave'|trans,
            'data-updated-message': 'confirmation.discard changes'|trans({ '%entity%': 'pimee_product_asset.asset.title'|trans }),
            'data-saveformstate': ''
        }
    }
    ) }}

    {% set title %}
        {{ 'pimee_product_asset.enrich_asset.view.title'|trans }} / {{ asset.code }}
    {% endset %}

    {% set backButton %}
        {{ elements.backLink(path('pimee_product_asset_index', {dataLocale: app.request.get('dataLocale')})) }}
    {% endset %}

    {% set buttons %}
        {% include 'PimEnterpriseProductAssetBundle:ProductAsset:_buttons.html.twig' %}
    {% endset %}

    {% set meta %}
        <span class="AknTitleContainer-metaItem">{{ 'Created'|trans }}: {{ asset.createdAt ? asset.createdAt|datetime_presenter : 'N/A'|trans }}</span>
        <span class="AknTitleContainer-metaItem">{{ 'Last update'|trans }}: {{ asset.updatedAt ? asset.updatedAt|datetime_presenter : 'N/A'|trans }}</span>
    {% endset %}

    {{ elements.page_header(title, buttons, null, meta, null, backButton, elements.updated(form.vars.id)) }}

    <div class="AknTabContainer form-horizontal product-edit product-view asset">
        <div class="layout-content">
            {{ elements.form_navbar(view_element_aliases(form.vars.id ~ '.asset.form_tab')) }}

            <div class="tabsections row-fluid tab-content">
                {{ view_elements(form.vars.id ~ '.asset.form_tab') }}
            </div>

        </div>
    </div>
    {{ form_end(form) }}

    <script>
        require(
            ['pimee/productasset/variations'],
            function (AssetVariationsForm) {
                'use strict';
                var variations = new AssetVariationsForm();
            }
        );
    </script>
{% endblock %}

<script>
    window.flashMessages = JSON.parse('{{ app.session.flashbag.all|json_encode()|raw }}');
</script>
