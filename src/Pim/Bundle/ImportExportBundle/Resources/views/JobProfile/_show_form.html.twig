<div class="row-fluid tab-content">
    <div class="tab-pane buffer-top active">
        {% block configuration %}
            {% set globalSettings %}
                <table class="configuration">
                    <thead></thead>
                    <tbody>
                        {% for step in form.job.steps %}
                            {% for child in step.children %}
                                {% for element in child.children %}
                                <tr>
                                    <td><b>{{ element.vars.label|trans }}</b></td>
                                    {% if element.vars.multiple is defined and element.vars.multiple == true %}
                                        {% set choice_labels = [] %}
                                        {% for choiceView in element.vars.choices %}
                                            {% set choice_labels = choice_labels|merge({(choiceView.value): choiceView.label}) %}
                                        {% endfor %}
                                        <td>{{ element.vars.data|normalizeValue(choice_labels)|trans }} {{ getViolations(violations, element.vars.name) }}</td>
                                    {% else %}
                                        <td>{{ element.vars.data|normalizeValue|trans }} {{ getViolations(violations, element.vars.name) }}</td>
                                    {% endif %}
                                </tr>
                                {% endfor %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            {% endset %}
            {{ elements.accordion({ 'pane.accordion.global_settings': globalSettings }, 1, true) }}
        {% endblock configuration %}
    </div>
</div>
