{% extends 'PimCatalogBundle:AttributeGroup:index.html.twig' %}

{% block groupTab %}
{{ JSFV(form) }}
<form id="{{ form.vars.id }}" class="form-horizontal" action="{{ path('pim_catalog_attributegroup_create') }}" method="POST">

    {% set title = 'New group'|trans %}

    {{ elements.page_header(title, elements.submitBtn) }}

    {{ elements.form_navbar('Properties') }}

    <div class="tab-content">

        {{ elements.form_errors(form) }}

        <div class="tab-pane active" id="properties">
            {{ elements.accordion({ 'General Properties': form_row(form.code), 'Group values': form_row(form.name) }) }}
        </div>
        {{ form_row(form.sort_order) }}
    </div>

    {{ form_row(form._token) }}
</form>
{% endblock %}
