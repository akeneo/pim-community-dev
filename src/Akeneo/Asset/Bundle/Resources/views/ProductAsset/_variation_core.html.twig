<table class="AknGrid AknGrid--unclickable table">
    <thead>
        <tr>
            <th class="AknGrid-headerCell"></th>
            {% if 'image' in variationModel.fileInfo.mimeType and metadata.variations[variationModel.id] %}
                <th class="AknGrid-headerCell">{{ 'pimee_product_asset.enrich_asset.view.width'|trans }}</th>
                <th class="AknGrid-headerCell">{{ 'pimee_product_asset.enrich_asset.view.height'|trans }}</th>
                <th class="AknGrid-headerCell">{{ 'pimee_product_asset.enrich_asset.view.resolution'|trans }}</th>
            {% endif %}
            <th class="AknGrid-headerCell">{{ 'pimee_product_asset.enrich_asset.view.filesize'|trans }}</th>
            <th class="AknGrid-headerCell">{{ 'pimee_product_asset.enrich_asset.view.filetype'|trans }}</th>
            <th class="AknGrid-headerCell">{{ 'pimee_product_asset.enrich_asset.view.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr class="AknGrid-bodyRow">
            <td class="AknGrid-bodyCell">
                <figure class="thumbnail">{% include '@AkeneoAsset/Property/thumbnail.html.twig'
                    with {'path': variationModel.fileInfo.key, 'filter': 'thumbnail'} only %}</figure>
            </td>
            {% if 'image' in variationModel.fileInfo.mimeType and metadata.variations[variationModel.id] %}
                <td class="AknGrid-bodyCell">{{ metadata.variations[variationModel.id].exifSizeWidth ? metadata.variations[variationModel.id].exifSizeWidth ~ ' px' : 'pimee_product_asset.notAvailable.label'|trans }}</td>
                <td class="AknGrid-bodyCell">{{ metadata.variations[variationModel.id].exifSizeHeight ? metadata.variations[variationModel.id].exifSizeHeight ~ ' px' : 'pimee_product_asset.notAvailable.label'|trans }}</td>
                <td class="AknGrid-bodyCell">{{ metadata.variations[variationModel.id].exifResolution ? metadata.variations[variationModel.id].exifResolution : 'pimee_product_asset.notAvailable.label'|trans }}</td>
            {% endif %}
            <td class="AknGrid-bodyCell">{{ variationModel.fileInfo.size|formatBytes }}</td>
            <td class="AknGrid-bodyCell">{{ variationModel.fileInfo.mimeType }}</td>
            <td class="AknGrid-bodyCell">
                <div class="AknButtonList AknButtonList--right AknButtonList--expanded">
                    {% block variation_buttons %}{% endblock %}
                    {% if variationModel.fileInfo %}
                        <a class="AknButtonList-item AknButton AknButton--grey AknButton--small no-hash"
                           title="{{ 'pimee_product_asset.enrich_asset.button.download'|trans }}"
                           href="{{ path('pim_enrich_media_download', {'filename': variationModel.fileInfo.key|url_encode}) }}">
                            {{ 'pimee_product_asset.enrich_asset.button.download'|trans|capitalize }}
                        </a>
                    {% endif %}
                </div>
            </td>
        </tr>
    </tbody>
</table>
