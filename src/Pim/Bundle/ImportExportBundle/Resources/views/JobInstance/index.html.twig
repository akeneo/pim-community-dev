{% extends 'PimImportExportBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#job-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block content %}

    {% set buttons %}
    <div class="btn-group">
        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);">
            <i class="icon-plus icon-white"></i>{{ createBtnLbl }}
        </a>
        <ul class="dropdown-menu pull-right">
            {% for connector, jobs in connectors %}
            <li class="disabled"><a href="javascript:void(0);"><b>{{ connector }}</b></a></li>
                {% for alias, job in jobs %}
                <li><a href="{{ path(createRouteName, { 'connector': connector, 'alias': alias }) }}">{{ job.name|trans }}</a></li>
                {% endfor %}
            {% endfor %}
        </ul>
    </div>
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div id="job-grid"></div>

{% endblock %}
