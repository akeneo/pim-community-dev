{% extends 'PimBatchBundle::layout.html.twig' %}

{% set title = job.id ? "Edit job" : "Create job" %}

{% block page_container %}
    {% block content %}

        <form action="{{ job.id ? path('pim_batch_job_edit', { id: job.id }) : path('pim_batch_job_create', { id: connector.id }) }}" method="POST">

            {% set buttons %}
                {{ elements.backLink(path('pim_batch_connector_index')) }}
                {{ elements.submitBtn }}
            {% endset %}

            {{ elements.page_header(title, buttons) }}

            {{ form_widget(form) }}
        </form>
    
    {% endblock %}
{% endblock %}
