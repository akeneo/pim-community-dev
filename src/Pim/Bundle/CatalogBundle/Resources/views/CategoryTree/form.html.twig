{% spaceless %}
{% if elements is not defined %}
    {% import 'PimUIBundle:Default:page_elements.html.twig' as elements %}
{% endif %}

{% set parentId = form.vars.value.parent ? form.vars.value.parent.id : null %}

{% set title = (form.vars.value.id ? 'Edit' : 'Create') ~ ' ' ~ (parentId ? 'category' : 'tree') %}

{% if form.vars.value.id %}
    {% set title = title ~ ' - ' ~ form.vars.value.title %}
{% endif %}
{% endspaceless %}

{% if form.vars.value.id %}
    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#history-grid'} %}
{% endif %}

<script type="text/javascript">
    require(
        ['jquery', 'pim/formupdatelistener'],
        function ($, FormUpdateListener) {
            'use strict';
            $(function () {
                new FormUpdateListener($('#{{ form.vars.id }}'));
            });
        }
    );
</script>

{{ JSFV(form) }}
<form id="{{ form.vars.id }}" class="form-horizontal"
    data-updated-title="{{ 'Are you sure you want to leave this page?'|trans }}"
    data-updated-message="{{ 'You will lose changes to the category if you leave the page.'|trans }}"
    action="{{ form.vars.value.id ?
    path('pim_catalog_categorytree_edit', { id: form.vars.value.id }) :
    path('pim_catalog_categorytree_create', { parent: parentId }) }}" method="POST" {{ form_enctype(form) }}>

    {% set buttons %}
        {% if form.vars.value.id %}
            {{ elements.deleteLink(
                path('pim_catalog_categorytree_remove', { id: form.vars.value.id }),
                'Are you sure you want to delete this category?'|trans ~ '<br />'
                ~ 'All sub-categories will be deleted.'|trans ~ '<br />'
                ~ 'Products in these categories will not be deleted.'|trans
            ) }}
        {% elseif parentId %}
            {{ elements.backLink(path('pim_catalog_categorytree_edit', { id: parentId }), 'Back to parent') }}
        {% endif %}
        {{ elements.submitBtn() }}
    {% endset %}

    {% set right %}
        <div class="pull-right entity-updated">
            <span id="updated" class="label label-warning hide">{{ 'There are unsaved changes.'|trans }}</span>
        </div>
    {% endset %}

    {{ elements.page_header(title|trans, buttons, null, null, right) }}

    {% include 'PimCatalogBundle:CategoryTree:_navbar.html.twig' %}

    <div class="row-fluid tab-content">
        {{ elements.form_errors(form) }}
        {% include 'PimCatalogBundle:CategoryTree:_tab-panes.html.twig' %}
    </div>
</form>
