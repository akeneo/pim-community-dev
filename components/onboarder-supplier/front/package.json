{
  "name": "@akeneo-pim-enterprise/onboarder-supplier",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "4.4.2",
    "akeneo-design-system": "^0.1.188",
    "styled-components": "^5.3.3",
    "react-query": "^3.39.1",
    "react-intl": "^6.0.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.16",
    "prettier": "^2.1.1",
    "react-error-overlay": "6.0.9",
    "eslint-plugin-formatjs": "^3.1.5",
    "@formatjs/cli": "^4.8.2"
  },
  "scripts": {
    "app:start": "react-scripts start",
    "app:build": "react-scripts build",
    "test:unit:run": "react-scripts test --watchAll=false --no-coverage",
    "test:unit:watch": "react-scripts test --no-coverage",
    "lint:fix": "prettier --config .prettierrc.json --parser typescript --write \"./src/**/*.{ts,tsx}\" && yarn eslint --max-warnings 0 --ext .tsx,.ts ./src --fix",
    "lint:check": "prettier --config .prettierrc.json --parser typescript --check \"./src/**/*.{ts,tsx}\" && yarn eslint --max-warnings 0 --ext .tsx,.ts ./src",
    "i18n-extract": "formatjs extract"
  },
  "eslintConfig": {
    "plugins": [
      "formatjs"
    ],
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "yoda": [1, "always"],
      "@typescript-eslint/no-explicit-any": "warn",
      "formatjs/enforce-id": [
        "error",
        {
          "idInterpolationPattern": "[sha512:contenthash:base64:6]"
        }
      ],
      "formatjs/enforce-default-message": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "react-error-overlay": "6.0.9"
  },
  "proxy": "http://localhost:8080"
}
