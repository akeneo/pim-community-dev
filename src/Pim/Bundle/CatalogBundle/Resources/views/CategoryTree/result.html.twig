{% extends 'OroSearchBundle:Search:searchResultItem.html.twig' %}
{% import 'OroLocaleBundle::macros.html.twig' as Locale %}

{% set showImage = true %}
{% set imagePath = asset('/bundles/pimui/images/icon_category.png') %}

{% if entity %}
    {% set recordUrl = indexer_item.recordUrl %}
{% endif %}

{% set title = entity.label|default('N/A') %}
{% set entityType = 'Category' |trans({}, 'config') %}

{% set entityInfo = [
    {'title': 'Created', 'value': entity.created ? Locale.time(entity.created) : 'N/A'}
] %}
