{% extends 'PimEnrichBundle:MassEditAction:layout.html.twig' %}

{% block content %}
    {% set title = ('pim_enrich.mass_edit_action.' ~ itemsName ~  '.page_title')|trans %}
    {% set subtitle = ('pim_enrich.mass_edit_action.' ~ itemsName ~ '.page_subtitle')|transchoice(count) %}
    {{ elements.page_header(title, null, subtitle) }}

    {{ parent() }}

    <div class="row">
        <div class="offset1">
            <h3>{{ title }}</h3>
            <h4>{{ subtitle }}</h4>
        </div>
    </div>

    {{ form_start(form, { 'action': path('pim_enrich_mass_edit_action_choose', queryParams ) }) }}

        <div class="row">
            <div class="offset1">
                {{ form_widget(form.operationAlias) }}
            </div>
        </div>

        <div class="row buffer-top">
            <div class="offset1 configuration">
                {% if itemsName == 'family' %}
                    {% set canceledPath = 'pim_enrich_family_index' %}
                {% else %}
                    {% set canceledPath = 'pim_enrich_product_index' %}
                {% endif %}

                {{ elements.link('btn.cancel', path(canceledPath), {icon: 'chevron-left', class: 'btn-cancel'}) }}
                {{ elements.submitBtn('btn.next','chevron-right') }}
            </div>
        </div>

    {{ form_end(form) }}
    {% block body_script %}
        {% set currentStep = 2 %}
        {{ parent() }}
    {% endblock %}

{% endblock %}
