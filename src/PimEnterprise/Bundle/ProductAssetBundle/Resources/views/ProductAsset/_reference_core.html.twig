<figure class="thumbnail">
    {% include '@PimEnterpriseProductAsset/Property/thumbnail.html.twig' with {
        'path': referenceModel.fileInfo.key,
        'filter': 'thumbnail'
    } only %}
</figure>
<table class="table">
    <thead>
        <tr>
            <th>{{ 'pimee_product_asset.enrich_asset.view.filename'|trans }}</th>
            <th>{{ 'pimee_product_asset.enrich_asset.view.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ referenceModel.fileInfo.originalFilename }}</td>
            <td>
                <div class="AknButtonsList">
                    {% block reference_buttons %}{% endblock %}
                    {% if referenceModel.fileInfo %}
                        <a class="AknButtonsList-item AknButton AknButton--grey AknButton--withIcon AknButton--little "
                           title="{{'pimee_product_asset.enrich_asset.button.download'|trans }}"
                           href="{{ path('pim_enrich_media_download', {'filename': referenceModel.fileInfo.key|url_encode}) }}">
                            <i class="AknButton-icon icon-download-alt"></i>
                            {{ 'pimee_product_asset.enrich_asset.button.download'|trans|capitalize }}
                        </a>
                    {% endif %}
                </div>
            </td>
        </tr>
    </tbody>
</table>
