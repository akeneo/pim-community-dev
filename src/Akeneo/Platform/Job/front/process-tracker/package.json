{
  "name": "@akeneo-pim-community/process-tracker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@akeneo-pim-community/shared": "*",
    "akeneo-design-system": "*",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "testing-library/no-unnecessary-act": "off",
      "testing-library/prefer-presence-queries": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "front_packages_path": "../../../../../../front-packages"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.12",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.1",
    "eslint-config-react-app": "^7.0.0",
    "prettier": "^2.1.1"
  },
  "proxy": "http://localhost:8080",
  "main": "lib/index.js",
  "jest": {
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/FakePIM.tsx",
      "<rootDir>/src/feature/ColumnsTab.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "peerDependencies": {
    "babel-loader": "8.1.0",
    "eslint": "^7.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.1.1"
  },
  "scripts": {
    "app:start": "yarn translation:build && yarn route:build && yarn packages:build && react-scripts start",
    "test:unit:run": "react-scripts test --watchAll=false --coverage --coverageDirectory=coverage --maxWorkers=3",
    "test:unit:watch": "react-scripts test --maxWorkers=3",
    "lib:build": "tsc -p ./tsconfig.build.json",
    "translation:build": "cp ../../../../../../public/js/translation/en_US.js ./src/translations.json",
    "route:build": "cp ../../../../../../public/js/fos_js_routes.json ./src/routes.json",
    "packages:build": "yarn --cwd=$npm_package_config_front_packages_path/akeneo-design-system run lib:build && yarn --cwd=$npm_package_config_front_packages_path/shared run lib:build",
    "lint": "prettier --config .prettierrc.json --parser typescript --check \"./src/**/*.{ts,tsx}\" && eslint --max-warnings 0 --ext .tsx,.ts ./src",
    "lint:fix": "prettier --write --config .prettierrc.json --parser typescript --loglevel=warn \"./src/**/*.{ts,tsx}\" && eslint --max-warnings 0 --ext .tsx,.ts ./src --fix"
  }
}
