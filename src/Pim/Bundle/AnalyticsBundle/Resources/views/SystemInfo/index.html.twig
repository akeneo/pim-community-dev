{% extends 'PimEnrichBundle::layout.html.twig' %}

{% block content %}
    {% set buttons %}
        <a href="{{ path('pim_analytics_system_info_download') }}" class="AknButton AknButton--withIcon AknButton--grey">
            <i class="AknButton-icon icon-download-alt"></i>
            {{ 'pim_analytics.system_info.download'|trans }}
        </a>
    {% endset %}

    {{ elements.page_header('pim_analytics.system_info.title'|trans, buttons) }}

    <div class="row-fluid tab-content">
        <table class="table">
            {% for infoType,info in data %}
                <tr>
                    <th>{{ ('pim_analytics.info_type.' ~ infoType)|trans }}</th>
                    <td>
                        {% if info is iterable %}
                            {{ info|join('<br>')|raw }}
                        {% else %}
                            {{ info }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
