{% extends 'PimCatalogBundle::layout.html.twig' %}
{% import 'PimDataGridBundle::macros.html.twig' as dataGrid %}

{% block content %}

    {% if title is not defined %}
        {% set title = 'group type.overview'|trans %}
    {% endif %}

    {% if buttons is not defined %}
        {% set buttons %}
            {{ elements.createBtn(
                'group type',
                path('pim_catalog_group_type_create'),
                'dialog',
                'pim_catalog_group_type_create'
            ) }}
        {% endset %}
    {% endif %}

    {{ elements.page_header(title, buttons) }}

    {{ dataGrid.renderGrid('group-type-grid', { localeCode: localeCode }) }}

{% endblock %}
