{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./public/bundles",
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": [
    "public/bundles",
    "vendor/akeneo/pim-community-dev/frontend/types.d.ts"
  ]
}
