{% extends 'PimProductBundle::layout.html.twig' %}

{% block page_container %}
<div class="container-fluid">
    {% block content %}
        {% set currentFamily = family is defined ? family : null %}
        <div id="family-container" class="row-fluid">
            <div class="sidebar-list">
                <ul>
                    {% for family in families %}
                    <li class="{{ family == currentFamily ? 'active' : '' }}"><a href="{{ path('pim_product_family_edit', {'id': family.id}) }}">{{ family.label }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div id="form-tab">
                {% block familyTab %}
                {% endblock familyTab %}
            </div>
        </div>
    {% endblock %}
</div>
{% endblock %}

{% block head_script_component %}
    {{ parent() }}
    
    {% javascripts
        '@PimUIBundle/Resources/public/js/jquery.multiselect.custom.js'
        '@PimUIBundle/Resources/public/js/jquery.pimMultiselect.js'
    
        filter='?yui_js'
        output='js/pim.multiselect.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
    $(function() {
        "use strict";

        $('#family-container').sidebarize({ buttons: ['<a href="{{ path('pim_product_family_create') }}"><i class="icon-plus-sign"></i></a>'] });
    });
    </script>
{% endblock %}