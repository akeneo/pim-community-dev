{
  "name": "pim-enterprise-dev",
  "version": "2.0.0",
  "description": "Akeneo PIM Enterprise Application",
  "homepage": "http://www.akeneo.com",
  "private": true,
  "config": {
    "source": "vendor/akeneo/pim-community-dev",
    "check": "vendor/akeneo/pim-community-dev/webpack/check-dependencies.js"
  },
  "scripts": {
    "sync": "NODE_PATH=node_modules node $npm_package_config_check --source=$npm_package_config_source",
    "webpack": "yarn run sync && NODE_PATH=node_modules webpack --config $npm_package_config_source/webpack.config.js --env=prod",
    "webpack-dev": "yarn run sync && NODE_PATH=node_modules webpack --config $npm_package_config_source/webpack.config.js",
    "webpack-watch": "yarn run sync && NODE_PATH=node_modules webpack --progress --config $npm_package_config_source/webpack.config.js --watch",
    "prettier": "prettier --config $npm_package_config_source/.prettierrc.json --parser typescript --write \"./src/**/*.ts\";",
    "before-commit": "yarn prettier && yarn lint && yarn test",
    "test": "yarn webpack-test && yarn integration && yarn acceptance tests/features && yarn acceptance $npm_package_config_source/tests/features",
    "webpack-test": "webpack --config $npm_package_config_source/webpack-test.config.js",
    "lint": "eslint 'src/**/*.js' --config $npm_package_config_source/.eslintrc --ignore-path $npm_package_config_source/.eslintignore --quiet",
    "lint-fix": "eslint 'src/**/*.js' --config $npm_package_config_source/.eslintrc --ignore-path $npm_package_config_source/.eslintignore --quiet --fix",
    "integration": "jest --no-cache --config $npm_package_config_source/tests/front/integration/jest/integration.jest.js",
    "acceptance": "NODE_PATH=./node_modules cucumber-js --tags @acceptance-front -r ./webpack/test/acceptance/run-steps.js -r ./tests/front/acceptance/cucumber",
    "acceptance-report": "NODE_PATH=./node_modules yarn run acceptance -- -f json:web/test_dist/acceptance-js.json && node $npm_package_config_source/webpack/test/acceptance/generate-report.js"
  },
  "devDependencies": {
    "colors": "1.1.2",
    "cucumber": "^4.0.0",
    "cucumber-html-reporter": "^4.0.2",
    "dep-diff": "1.0.1",
    "glob": "^7.1.2",
    "html-webpack-inline-source-plugin": "^0.0.9",
    "html-webpack-plugin": "^3.0.6",
    "jest": "^22.4.3",
    "prettier": "^1.10.2",
    "puppeteer": "^1.1.1",
    "read-pkg": "2.0.0"
  },
  "dependencies": {
    "@types/backbone": "^1.3.42",
    "@types/node": "^9.6.1",
    "JSON2": "0.1.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.2",
    "babel-minify": "0.2.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.0",
    "backbone": "0.9.10",
    "bundle-loader": "0.5.5",
    "deepmerge": "1.5.1",
    "eslint": "4.5.0",
    "exports-loader": "0.6.4",
    "expose-loader": "0.7.3",
    "html-loader": "0.5.1",
    "imports-loader": "0.7.1",
    "jquery": "1.11.0",
    "loader-utils": "1.1.0",
    "lodash": "4.17.4",
    "merge-objects": "1.0.5",
    "raw-loader": "0.5.1",
    "regexp-replace-loader": "1.0.0",
    "summernote": "0.6.5",
    "text-loader": "0.0.1",
    "ts-loader": "^3.5.0",
    "typescript": "^2.7.2",
    "underscore": "1.8.3",
    "webpack": "3.5.5",
    "webpack-cleanup-plugin": "0.5.1",
    "webpack-dev-server": "2.7.1",
    "webpack-livereload-plugin": "0.11.0",
    "write-file-webpack-plugin": "4.1.0",
    "yamljs": "0.3.0"
  }
}
