{
  "name": "akeneo-design-system",
  "version": "0.0.0",
  "description": "Akeneo design system",
  "main": "lib/index.js",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "lib:build": "echo 'Building Akeneo Design System lib...' && tsc -p ./tsconfig.build.json && echo 'Done!'",
    "lib:watch": "tsc -p ./tsconfig.build.json --watch",
    "test": "yarn lint && yarn test:unit:run && yarn test:visual:run",
    "test:unit:run": "jest --config ./jest.unit.config.js --maxWorkers=3",
    "test:unit:watch": "jest --config ./jest.unit.config.js --watch --maxWorkers=3",
    "test:visual:run": "yarn storybook:extract && jest --config ./jest.visual.config.js",
    "test:visual:update": "yarn storybook:extract && jest --config ./jest.visual.config.js -u",
    "lint:fix": "prettier --config .prettierrc.json --parser typescript --write \"./{src,generator}/**/*.{ts,tsx}\" && yarn eslint --config .eslintrc.json --quiet \"./src/**/*.{ts,tsx}\" --fix",
    "lint": "yarn prettier --config .prettierrc.json --parser typescript --check \"./{src,generator}/**/*.{ts,tsx}\" && yarn eslint --config .eslintrc.json --quiet \"./src/**/*.{ts,tsx}\"",
    "storybook:start": "yarn storybook:copy-public && yarn start-storybook -p 6006 -s ./public",
    "storybook:build": "yarn storybook:copy-public && yarn build-storybook -s ./public",
    "storybook:ci:start": "yarn start-storybook -p 6006 --ci",
    "storybook:copy-public": "cp ./src/__image_snapshots__/*standard-correctly-1-snap.png ./public/",
    "storybook:extract": "sb extract storybook-static stories.json"
  },
  "author": "akeneo",
  "license": "OSL-3.0",
  "dependencies": {
    "@storybook/addon-a11y": "*",
    "@storybook/addon-docs": "*",
    "@storybook/addon-essentials": "*",
    "@storybook/addon-links": "*",
    "@storybook/cli": "*",
    "@storybook/react": "*",
    "@testing-library/dom": "*",
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@testing-library/react-hooks": "*",
    "@testing-library/user-event": "*",
    "@types/draftjs-to-html": "*",
    "@types/html-to-draftjs": "*",
    "@types/jest": "<27.0.0",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/react-draft-wysiwyg": "*",
    "@types/styled-components": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "draft-js": "*",
    "draftjs-to-html": "*",
    "eslint": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "html-to-draftjs": "*",
    "jest": "<27.0.0",
    "jest-puppeteer": "*",
    "prettier": "*",
    "puppeteer": "*",
    "react": "*",
    "react-dom": "*",
    "react-draft-wysiwyg": "*",
    "react-test-renderer": "*",
    "styled-components": "*",
    "themeprovider-storybook": "*",
    "ts-jest": "<27.0.0",
    "tsconfig-paths-webpack-plugin": "*",
    "typescript": "*"
  }
}
