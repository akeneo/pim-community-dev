{% block pim_type_scope_filter_js %}
    new (ScopeFilter.extend({
        'name':    {{ formView.vars.name|json_encode|raw }},
        'label':   {{ formView.vars.label|json_encode|raw }},
        'enabled': {{ formView.vars.show_filter|json_encode|raw }},
        'options': {{ formView.children.value.vars.choices|oro_filter_choices|json_encode|raw }}
    }))
{% endblock %}

{% block pim_type_currency_filter_js %}
    new (CurrencyFilter.extend({
        'name':             {{ formView.vars.name|json_encode|raw }},
        'label':            {{ formView.vars.label|json_encode|raw }},
        'enabled':          {{ formView.vars.show_filter|json_encode|raw }},
        'choices':          {{ formView.children.type.vars.choices|oro_filter_choices|json_encode|raw }},
        'currencies':       {{ formView.children.currency.vars.choices|oro_filter_choices|json_encode|raw }},
        'formatterOptions': {{ formView.vars.formatter_options|json_encode|raw }}
    }))
{% endblock %}

