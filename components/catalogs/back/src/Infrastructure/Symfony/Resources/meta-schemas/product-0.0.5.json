{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://api.akeneo.com/mapping/product/0.0.5/schema",
  "type": "object",
  "properties": {
    "$id": { "$ref": "#/$defs/$id" },
    "$schema": { "$ref": "#/$defs/$schema" },
    "$comment": { "$ref": "#/$defs/$comment" },
    "$defs": { "$ref": "#/$defs/$defs" },
    "title": { "$ref": "#/$defs/title" },
    "description": { "$ref": "#/$defs/description" },
    "type": { "const": "object" },
    "properties": {
      "type": "object",
      "properties": {
        "uuid": { "$ref": "#/$defs/uuidProperty" }
      },
      "additionalProperties": { "$ref": "#/$defs/property" },
      "default": {},
      "required": ["uuid"]
    }
  },
  "$defs": {
    "$id": {
      "$comment": "Non-empty fragments not allowed.",
      "pattern": "^[^#]*#?$"
    },
    "$schema": { "$ref": "#/$defs/uriString" },
    "$comment": {
      "type": "string"
    },
    "$defs": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/property" }
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "propertyWithSimpleType": {
      "type": "object",
      "properties": {
        "title": { "$ref": "#/$defs/title" },
        "description": { "$ref": "#/$defs/description" },
        "type": {
          "enum": [
            "string",
            "number",
            "boolean"
          ]
        },
        "minLength": {
          "type": "integer",
          "minimum": 0
        },
        "maxLength": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false,
      "required": ["type"]
    },
    "propertyWithTypeAndFormat": {
      "type": "object",
      "properties": {
        "title": { "$ref": "#/$defs/title" },
        "description": { "$ref": "#/$defs/description" },
        "type": {
          "enum": [
            "string"
          ]
        },
        "format": {
          "enum": [
            "date-time"
          ]
        },
        "minLength": {
          "type": "integer",
          "minimum": 0
        },
        "maxLength": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false,
      "required": ["type", "format"]
    },
    "property": {
      "oneOf": [
        { "$ref": "#/$defs/propertyWithSimpleType" },
        { "$ref": "#/$defs/propertyWithTypeAndFormat" }
      ]
    },
    "uriString": {
      "type": "string",
      "format": "uri"
    },
    "uuidProperty": {
      "type": "object",
      "properties": {
        "title": { "$ref": "#/$defs/title" },
        "description": { "$ref": "#/$defs/description" },
        "type": { "const": "string" }
      },
      "additionalProperties": false,
      "required": ["type"]
    }
  },
  "additionalProperties": false
}
