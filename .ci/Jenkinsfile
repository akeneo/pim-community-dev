pipeline {
  agent {
    kubernetes {
      label 'test'
      yaml """
        apiVersion: v1
        kind: Pod
        spec:
          containers:
            - name: php
              image: php:fpm
        """
    }
  }
  stages {
    stage('Parallel') {
      parallel {
        stage('A') {
          container('php') {
            steps {
              sh "sleep 60"
            }
          }
        }
        stage('B') {
          container('php') {
            steps {
              sh "sleep 60"
            }
          }
        }
        stage('C') {
          container('php') {
            steps {
              sh "sleep 60"
            }
          }
        }
        stage('D') {
          container('php') {
            steps {
              sh "sleep 60"
            }
          }
        }
        stage('E') {
          container('php') {
            steps {
              sh "sleep 60"
            }
          }
        }
      }
    }
  }
}
