{% extends 'PimCatalogBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#association-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block content %}

    {% set title = 'association.overview'|trans %}

    {% set buttons %}
        {% if resource_granted('pim_catalog_association_create') %}
            {{ elements.createBtn(
                'association',
                null,
                { 'id': 'create-association', 'data-form': 'dialog', 'data-form-url': path('pim_catalog_association_create') }
            ) }}
            <script type="text/javascript">
                require(
                    ['jquery', 'pim/dialogform'],
                    function ($, DialogForm) {
                        'use strict';
                        $(function() {
                            new DialogForm('#create-association');
                        });
                    }
                );
            </script>
        {% endif %}
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div id="association-grid"></div>

{% endblock %}
