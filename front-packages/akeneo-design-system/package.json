{
  "name": "@akeneo/akeneo-design-system",
  "version": "0.0.0",
  "description": "Akeneo design system",
  "main": "lib/index.js",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "lib:build": "echo 'Building Akeneo Design System lib...' && tsc -p ./tsconfig.build.json && echo 'Done!'",
    "lib:watch": "tsc -p ./tsconfig.build.json --watch",
    "test": "yarn lint:check && yarn test:unit:run && yarn test:visual:run",
    "test:unit:run": "jest --env=jsdom --config ./jest.unit.config.js --maxWorkers=3",
    "test:unit:watch": "jest --env=jsdom --config ./jest.unit.config.js --watch --maxWorkers=3",
    "test:visual:run": "yarn storybook:extract && jest --config ./jest.visual.config.js",
    "test:visual:update": "yarn storybook:extract && jest --config ./jest.visual.config.js -u",
    "lint:fix": "prettier --config .prettierrc.json --parser typescript --write \"./{src,generator}/**/*.{ts,tsx}\" && yarn eslint --config .eslintrc.json --quiet \"./src/**/*.{ts,tsx}\" --fix",
    "lint": "yarn prettier --config .prettierrc.json --parser typescript --check \"./{src,generator}/**/*.{ts,tsx}\" && yarn eslint --config .eslintrc.json --quiet \"./src/**/*.{ts,tsx}\"",
    "storybook:start": "yarn storybook:copy-public && yarn start-storybook -p 6006 -s ./public",
    "storybook:build": "yarn storybook:copy-public && yarn build-storybook -s ./public",
    "storybook:ci:start": "yarn start-storybook -p 6006 --ci",
    "storybook:copy-public": "cp ./src/__image_snapshots__/*standard-correctly-1-snap.png ./public/",
    "storybook:extract": "sb extract storybook-static stories.json"
  },
  "author": "akeneo",
  "license": "OSL-3.0",
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@storybook/addon-a11y": "^6.4.15",
    "@storybook/addon-actions": "^6.4.15",
    "@storybook/addon-docs": "^6.4.15",
    "@storybook/addon-essentials": "^6.4.15",
    "@storybook/addon-links": "^6.4.15",
    "@storybook/addons": "^6.4.15",
    "@storybook/cli": "^6.4.15",
    "@storybook/react": "^6.4.15",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/draft-js": "^0.11.8",
    "@types/draftjs-to-html": "^0.8.1",
    "@types/html-to-draftjs": "^1.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-draft-wysiwyg": "^1.13.4",
    "@types/styled-components": "^5.1.21",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.7.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "expect-puppeteer": "^6.0.2",
    "immutable": "^4.0.0",
    "jest": "^26.0.0",
    "jest-environment-puppeteer": "^6.0.3",
    "jest-puppeteer": "^6.0.3",
    "prettier": "^2.5.1",
    "puppeteer": "^13.1.2",
    "react-test-renderer": "^17.0.2",
    "themeprovider-storybook": "^1.8.0",
    "ts-jest": "^26.0.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0"
  },
  "dependencies": {
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "html-to-draftjs": "^1.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draft-wysiwyg": "^1.14.7",
    "react-is": "^17.0.2",
    "styled-components": "^5.3.3"
  }
}
