  },
  "dependencies": {
    "ajv": "^6.10.2",
    "babel-polyfill": "6.26.0",
    "backbone": "0.9.10",
    "css-loader": "^3.3.0",
    "dep-diff": "1.0.1",
    "dropzone": "4.0.1",
    "json-schema-ref-parser": "^7.1.2",
    "json-schema-to-typescript": "^7.1.0",
    "formik": "^2.0.6",
    "jquery": "3.4.0",
    "less": "^3.9.0",
    "lodash": "^4.17.0",
