{% extends 'PimCatalogBundle::layout.html.twig' %}

{% block content %}

    {{ JSFV(form) }}
    <form id="{{ form.vars.id }}" class="form-horizontal" action="{{ form.vars.value.id ?
        path('pim_catalog_channel_edit', { id: form.vars.value.id }) :
        path('pim_catalog_channel_create') }}" method="POST">

        {% if form.vars.value.id %}
            {% set title = elements.title('channel', 'edit', form.vars.value.name) %}
        {% else %}
            {% set title = elements.title('channel', 'create') %}
        {% endif %}

        {% set buttons %}
            {{ elements.backLink(path('pim_catalog_channel_index')) }}
            {% if form.vars.value.id %}
                {{ elements.deleteLink(path('pim_catalog_channel_remove', { id: form.vars.value.id }), 'Are you sure you want to delete this channel?') }}
            {% endif %}
            {{ elements.submitBtn() }}
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        <div class="row-fluid">
            {{ elements.form_errors(form) }}

            {{ form_row(form.id) }}

            {{ form_row(form.code) }}

            {{ form_row(form.name) }}

            {{ form_row(form.currencies) }}

            {{ form_row(form.locales) }}

            {{ form_row(form.category) }}

            {{ form_row(form._token) }}
        </div>
    </form>
{% endblock %}
