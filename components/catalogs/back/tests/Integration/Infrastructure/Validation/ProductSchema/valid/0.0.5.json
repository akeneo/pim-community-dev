{
    "$id": "https://example.com/product",
    "$schema": "https://api.akeneo.com/mapping/product/0.0.5/schema",
    "$comment": "My first schema !",
    "title": "Product Mapping",
    "description": "JSON Schema describing the structure of products expected by our application",
    "type": "object",
    "properties": {
        "uuid": {
            "title": "Product uuid",
            "type": "string"
        },
        "name": {
            "type": "string",
            "pattern": ".*"
        },
        "body_html": {
            "title": "Description",
            "description": "Product description in raw HTML",
            "type": "string"
        },
        "is_published": {
            "type": "boolean"
        },
        "height": {
            "type": "number"
        },
        "meta_description": {
            "type": "string",
            "minLength": 50,
            "maxLength": 160
        },
        "size": {
            "type": "string",
            "enum": ["S", "M", "L"]
        }
    }
}
