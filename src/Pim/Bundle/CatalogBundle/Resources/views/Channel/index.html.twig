{% extends 'PimCatalogBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#channel-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block content %}

    {% set title = 'channel.overview'|trans %}

    {% set buttons %}
        {% if resource_granted('pim_catalog_channel_create') %}
            {{ elements.createBtn('channel', path('pim_catalog_channel_create')) }}
        {% endif %}
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div id="channel-grid"></div>

{% endblock %}
