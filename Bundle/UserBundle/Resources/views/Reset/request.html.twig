{% extends 'OroUserBundle::layout.html.twig' %}

{% block bodyClass %}login-page{% endblock %}
{% block messages %}
    {% set messagesContent = parent() %}
{% endblock messages %}

{% block content %}
<form action="{{ path('oro_user_reset_send_email') }}" method="post" class="form-signin">
    <div class="title-box">
        <h1 class="oro-title">{{ oro_config_value('oro_ui.application_title') }}</h1>
        <span class="divider-vertical"></span>
        <h2 class="title">{{ 'Forgot Password'|trans }}</h2>
    </div>
    <fieldset class="oro-forgot-password">
        {% if invalid_username is defined %}
            <div class="alert alert-error">
                {{ 'The username or email address "%username%" does not exist.'|trans({ '%username%': invalid_username }) }}
            </div>
        {% endif %}
        {{ messagesContent }}
        <input type="text" id="prependedInput" name="username" required="required" placeholder="{{ 'Username or Email'|trans }}" autofocus/>
        <div class="form-row">
            <a href="{{ path('oro_user_security_login') }}" class="btn btn-link">&laquo; {{ 'Return to Login'|trans }}</a>
            <button type="submit" class="btn extra-submit btn-large btn-primary">{{ 'Request'|trans }}</button>
        </div>
    </fieldset>
</form>
{% endblock %}
