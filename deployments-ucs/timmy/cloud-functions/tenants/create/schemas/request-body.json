{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "RequestBody",
  "description": "This document describes the details of the request body for tenant creation",
  "type": "object",
  "properties": {
    "branchName": {
      "description": "The branch name",
      "type": "string"
    },
    "instanceName": {
      "description": "The tenant name",
      "type": "string"
    },
    "dnsCloudDomain": {
      "description": "The DNS zone for the tenant",
      "type": "string"
    },
    "pim": {
      "description": "The PIM configuration for the tenant",
      "type": "object",
      "properties": {
        "defaultAdminUser": {
          "description": "The PIM admin user",
          "type": "object",
          "properties": {
            "login": {
              "description": "The login for PIM admin user",
              "type": "string"
            },
            "firstName": {
              "description": "The firstname of the PIM admin user",
              "type": "string"
            },
            "lastName": {
              "description": "The lastname of the PIM admin user",
              "type": "string"
            },
            "email": {
              "description": "The email of the PIM admin user",
              "type": "string",
              "format": "email"
            },
            "uiLocale": {
              "description": "The ui locale of the PIM admin user",
              "type": "string"
            }
          },
          "required": [
            "login",
            "firstName",
            "lastName",
            "email",
            "uiLocale"
          ]
        }
      },
      "required": [
        "defaultAdminUser"
      ]
    }
  },
  "required": [
    "branchName",
    "instanceName",
    "pim"
  ]
}
