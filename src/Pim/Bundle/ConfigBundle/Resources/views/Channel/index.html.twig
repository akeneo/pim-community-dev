{% extends 'PimConfigBundle::layout.html.twig' %}

{% set title = 'Channels overview'|trans %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#channel-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block page_container %}
<div class="container-fluid">
    {% block content %}

    {% set buttons %}
        <a class="btn btn-primary pull-right" href="{{ path('pim_config_channel_create') }}">{{ 'New channel'|trans }}</a>
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div id="channel-grid"></div>
{% endblock %}
</div>
{% endblock %}
